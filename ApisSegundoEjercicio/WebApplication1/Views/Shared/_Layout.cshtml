<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebApplication1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />

   
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@600&display=swap" rel="stylesheet">

   
    <style>
        body {
            background-color: #0f1923;
            color: #fff;
            font-family: 'Orbitron', sans-serif;
        }

        h2 {
            text-align: center;
            margin-top: 30px;
            color: #f04c4c;
        }

        .card-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            margin: 40px;
        }

        .valorant-card {
            background-color: #1a2733;
            border: 2px solid #f04c4c;
            border-radius: 10px;
            width: 220px;
            text-align: center;
            padding: 15px;
            transition: transform 0.2s ease;
            box-shadow: 0 0 10px #f04c4c44;
        }

            .valorant-card:hover {
                transform: scale(1.05);
                box-shadow: 0 0 20px #f04c4c88;
            }

            .valorant-card img {
                width: 100px;
                height: 100px;
                object-fit: contain;
                margin-bottom: 10px;
            }

            .valorant-card h4 {
                font-size: 1.1rem;
                color: #fff;
                margin: 0;
            }

      
        .navbar {
            background-color: #1a2733 !important;
            border-bottom: 2px solid #f04c4c;
        }

        .navbar-brand, .nav-link {
            color: #f04c4c !important;
            font-weight: bold;
            transition: color 0.2s;
        }

            .nav-link:hover {
                color: #ffffff !important;
            }

        footer {
            background-color: #1a2733;
            border-top: 2px solid #f04c4c;
            padding: 15px 0;
            color: #aaa;
        }

        a {
            color: #f04c4c;
        }

            a:hover {
                color: #ffffff;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WebApplication1</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Agentes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Weapons" asp-action="Index">Armas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Maps" asp-action="Index">Mapas</a> <!-- Nuevo enlace -->
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-muted">
        <div class="container text-center">
            &copy; 2025 - WebApplication1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
