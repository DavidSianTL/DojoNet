@{
    ViewData["Title"] = "Dashboard de Productos";
}

<h2>Dashboard de Productos</h2>

@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Descripción</th>
                <th>Stock</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Precio</td>
                    <td>@producto.Descripcion</td>
                    <td>@producto.Stock</td>
                    <td>
                        <!-- Botón para editar el producto -->
                        <a href="@Url.Action("Editar", "Producto", new { id = producto.Id })" class="btn btn-warning btn-sm">Editar</a>

                        <!-- Botón para eliminar el producto -->
                        <a href="@Url.Action("Eliminar", "Producto", new { id = producto.Id })" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Botón para regresar a la página principal donde se ve el botón Crear Producto -->
<a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Regresar</a>

@if (Model == null || Model.Count == 0)
{
    <p>No se han creado productos aún.</p>
}
