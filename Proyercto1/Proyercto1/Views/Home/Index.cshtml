@{
    ViewData["Title"] = "Inicio";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

<style>
    body {
        background: linear-gradient(to right, #e0ffe0, #c6f6c6);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .welcome-container {
        max-width: 800px;
        margin: 100px auto;
        text-align: center;
        background-color: #ffffff;
        padding: 40px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    }

        .welcome-container h1 {
            color: #28a745;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .welcome-container h2 {
            color: #555;
            margin-bottom: 30px;
        }

    .btn-super {
        padding: 12px 25px;
        font-size: 16px;
        border-radius: 10px;
        margin: 10px;
        min-width: 180px;
    }

        .btn-super i {
            margin-right: 8px;
        }

    .info-text {
        margin-top: 20px;
        font-size: 16px;
        color: #777;
    }
</style>

<div class="welcome-container">
    <h1><i class="fas fa-store"></i> Bienvenido a Super del barrio</h1>

    @if (ViewBag.UsrNombre != null)
    {
        <h2>Hola, @ViewBag.UsrNombre. ¿Qué deseas hacer hoy?</h2>

        <a href="@Url.Action("Crear", "Producto")" class="btn btn-success btn-super">
            <i class="fas fa-plus-circle"></i> Crear Producto
        </a>

        <a href="@Url.Action("Dashboard", "Producto")" class="btn btn-primary btn-super">
            <i class="fas fa-box-open"></i> Ver Productos
        </a>

        <a href="@Url.Action("Logout", "Login")" class="btn btn-danger btn-super">
            <i class="fas fa-sign-out-alt"></i> Cerrar Sesión
        </a>
    }
    else
    {
        <p class="info-text">Debes iniciar sesión para gestionar productos.</p>
        <a href="@Url.Action("Index", "Login")" class="btn btn-success btn-super">
            <i class="fas fa-sign-in-alt"></i> Iniciar Sesión
        </a>
    }
</div>

