@model MVCdaoWS.Models.EmpleadoWS
<h2>Eliminar Empleado</h2>

<p>¿Estás seguro que deseas eliminar al empleado <strong>@Model.Nombre @Model.Apellido</strong>?</p>

@using (Html.BeginForm("Eliminar", "EmpleadosWS", FormMethod.Post))
{
    @Html.HiddenFor(m => m.EmpleadoID)
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a href="@Url.Action("Index", "EmpleadosWS")" class="btn btn-secondary">Cancelar</a>
}
