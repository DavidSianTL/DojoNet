@{
    ViewData["Title"] = "Consultar Nombre de Idioma";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-purple text-white">
            <i class="fas fa-language"></i> @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="NombreIdioma" method="get">
                <div class="form-group">
                    <label for="codigoIdioma">Código ISO del Idioma (2 letras):</label>
                    <input type="text" id="codigoIdioma" name="codigoIdioma"
                           required class="form-control"
                           maxlength="2" pattern="[A-Za-z]{2}"
                           placeholder="Ej: es (español), en (inglés), fr (francés)" />
                </div>
                <button type="submit" class="btn btn-purple">
                    <i class="fas fa-search"></i> Buscar Idioma
                </button>
            </form>
        </div>
    </div>
</div>