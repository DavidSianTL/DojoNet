@{
    ViewData["Title"] = "Código ISO del Idioma";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-secondary text-white">
            
            <i class="fas fa-code"></i> @ViewData["Title"]
        </div>
        <div class="card-body text-center">
            @if (!string.IsNullOrEmpty(ViewBag.CodigoISO))
            {
                <h4 class="mb-4">
                    <span>"@ViewBag.NombreIdioma"</span>
                    <i class="fas fa-arrow-right mx-3 text-muted"></i>
                    <span class="badge bg-primary">@ViewBag.CodigoISO</span> <!-- Cambiado a azul -->
                </h4>
            }
            else
            {
                <div class="alert alert-warning">No se encontró código ISO para el idioma especificado.</div>
            }
        </div>
        <div class="card-footer text-center bg-light">
            
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver al Inicio
            </a>
        </div>
    </div>
</div>