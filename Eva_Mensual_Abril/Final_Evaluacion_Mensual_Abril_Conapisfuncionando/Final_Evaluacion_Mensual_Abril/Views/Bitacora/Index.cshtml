@model List<Final_Evaluacion_Mensual_Abril.Models.LogEntry>
@{
    ViewData["Title"] = "Bitácora del Sistema";
}

<style>
    body {
        background-color: #f9f4f0; 
    }

    h2 {
        color: #d35400; 
        font-weight: bold;
        margin-bottom: 20px;
    }

    .table-container {
        background-color: #ffffff; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
    }

    .table thead {
        background-color: #f39c12; 
        color: white;
    }

    .table tbody tr:hover {
        background-color: #fff3e0; 
    }

    .table td, .table th {
        vertical-align: middle;
    }

    .table-danger {
        background-color: #f8d7da !important; 
    }
</style>

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <form method="get" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <label>Desde:</label>
                <input type="date" name="desde" value="@ViewBag.Desde" class="form-control" />
            </div>
            <div class="col-md-4">
                <label>Hasta:</label>
                <input type="date" name="hasta" value="@ViewBag.Hasta" class="form-control" />
            </div>
            <div class="col-md-4 d-flex align-items-end">
                
            </div>
            <button type="submit" class="btn btn-primary mr-2">Filtrar</button>
        </div>
    </form>

    <div class="table-container">
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Fecha</th>
                        <th>Usuario</th>
                        <th>Acción</th>
                        <th>Controlador</th>
                        <th>Descripción</th>
                        <th>Error</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr class="@(log.EsError ? "table-danger" : "")">
                            <td>@log.Fecha.ToString("g")</td>
                            <td>@log.Usuario</td>
                            <td>@log.Accion</td>
                            <td>@log.Controlador</td>
                            <td>@log.Descripcion</td>
                            <td>@(log.EsError ? "Sí" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info mt-3">No se encontraron registros con los filtros seleccionados.</div>
    }
</div>
