@model UsuarioModel
@{
    ViewData["Title"] = "Registro de Usuario";
}

<h2>Registro de Usuario</h2>

@if (ViewBag.Mensaje != null)
{
    <div style="color: green;">@ViewBag.Mensaje</div>
}

<form asp-action="Registro" asp-controller="Home" method="post">
    <label>Nombre:</label>
    <input type="text" asp-for="Nombre" />
    <span style="color:red;" asp-validation-for="Nombre"></span>
    <br />

    <label>Correo:</label>
    <input type="email" asp-for="Correo" />
    <span style="color:red;" asp-validation-for="Correo"></span>
    <br />

    <label>Contraseña:</label>
    <input type="password" asp-for="Contraseña" />
    <span style="color:red;" asp-validation-for="Contraseña"></span>
    <br />

    <button type="submit">Registrar</button>
</form>