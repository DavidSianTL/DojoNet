@model TiendaEnLinea_MR.Models.ProductoViewModel

@{
    ViewData["Title"] = "Eliminar Producto";
}

<div class="container mt-5 pt-5">
    <h2>¿Estás seguro que deseas eliminar este producto?</h2>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Nombre:</dt>
                <dd class="col-sm-10">@Model.NombreProducto</dd>

                <dt class="col-sm-2">Descripción:</dt>
                <dd class="col-sm-10">@Model.Descripcion</dd>

                <dt class="col-sm-2">Categoría:</dt>
                <dd class="col-sm-10">@Model.Categoria</dd>

                <dt class="col-sm-2">Cantidad:</dt>
                <dd class="col-sm-10">@Model.Cantidad</dd>
            </dl>
        </div>

        <div class="card-footer text-end">
            <form asp-action="EliminarConfirmado" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                <a asp-action="Ver" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
<script type="text/javascript">

    var sesionActiva= saessionStorage.getItem('sesionActiva');

    if(!sesionActiva || sesionActiva !== 'true'){
        window.location.href = '@Url.Action("Login", "Login")';
    }

    var correoSesion = '@(Context.Session.GetString("Correo"))';

    if(!correoSesion || correoSesion == '' || correoSesion === 'null' || correoSesion === 'undefined'){
        window.location.href = '@Url.Action("Login", "Login")';
    }

</script>