@model wbEjercicioEmpleadosMVC.Models.EmpleadoModel

@{
    ViewData["Title"] = "Eliminar empleado";
}

<div class="container mt-5">
    <h2>¿Estás seguro que deseas eliminar este empleado?</h2>

    <div class="card mt-3">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">Nombre:</dt>
                <dd class="col-sm-10">@Model.Nombre</dd>

                <dt class="col-sm-2">Apellido:</dt>
                <dd class="col-sm-10">@Model.Apellido</dd>

                <dt class="col-sm-2">Puesto:</dt>
                <dd class="col-sm-10">@Model.Puesto</dd>

            </dl>
        </div>

        <div class="card-footer text-end">
            <form asp-action="Eliminar" method="post">
                <input type="hidden" asp-for="EmpleadoID" />
                <button type="submit" class="btn btn-danger">Sí, eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>