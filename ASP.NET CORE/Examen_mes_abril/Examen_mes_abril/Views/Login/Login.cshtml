@model UsuarioViewModel

<section class="vh-100 d-flex align-items-center justify-content-center bg-light">
    <div class="container-fluid">
        <div class="row shadow-lg rounded overflow-hidden">
            
            <div class="col-12 col-md-6 d-flex flex-column justify-content-center align-items-center p-5 bg-dark text-white">
                <h2 class="mb-4 text-center">¡Bienvenido!</h2>
                
                <img class="img-fluid rounded mx-auto my-4" loading="lazy" src="./images/logo.png" width="300" height="250" alt="Anika Logo">
            </div>

            
            <div class="col-12 col-md-6 bg-white p-5">
                <h3 class="text-center mb-4">Iniciar Sesión</h3>

                <form id="loginForm" asp-action="Login" asp-controller="Login" method="post" novalidate>
                    <div class="mb-3">
                        <label asp-for="Correo" class="form-label">Correo electrónico</label>
                        <input asp-for="Correo" type="email" class="form-control" placeholder="correo@ejemplo.com" required autocomplete="email" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Tu contraseña" required autocomplete="current-password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>



                    <div class="d-grid">
                        <button type="submit" class="btn btn-editar btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i> Ingresar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

@if (TempData["LogoutSuccess"] != null && (bool)TempData["LogoutSuccess"])
{
    <script>
        window.onload = function () {
            Swal.fire({
                icon: 'success',
                title: 'Sesión cerrada',
                text: 'Has cerrado sesión correctamente',
                timer: 3000,
                showConfirmButton: false
            });
        };
    </script>
}
