@model ProyectoDojoGeko.Models.AsociarUsuarioViewModel
@{
    ViewData["Title"] = "Asociar Usuario - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- CSS específico para asociar usuario -->
<link rel="stylesheet" href="~/css/asociar-usuario.css" />

<div class="asociar-usuario-container">
    <!-- Header de la página -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-user-plus"></i>
                Asociar Usuario al Empleado
            </h1>
            <p class="page-subtitle">
                Crear una cuenta de usuario del sistema para el empleado seleccionado
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Detalle", "Empleados", new { id = Model.Empleado.IdEmpleado })" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                <span>Volver al Detalle</span>
            </a>
        </div>
    </div>

    <!-- Tarjeta de información del empleado -->
    <div class="empleado-info-card">
        <div class="empleado-summary">
            <div class="empleado-avatar">
                <img src="/placeholder.svg?height=80&width=80&text=@(Model.Empleado.NombreEmpleado.Substring(0,1))@(Model.Empleado.ApellidoEmpleado.Substring(0,1))"
                     alt="@Model.Empleado.NombreEmpleado @Model.Empleado.ApellidoEmpleado"
                     class="avatar-image" />
                <div class="avatar-status active">
                    <i class="fas fa-briefcase"></i>
                </div>
            </div>
            <div class="empleado-details">
                <h3 class="empleado-nombre">@Model.Empleado.NombreEmpleado @Model.Empleado.ApellidoEmpleado</h3>
                <p class="empleado-info">ID: @Model.Empleado.IdEmpleado | DPI: @Model.Empleado.DPI</p>
                <p class="empleado-correo">@Model.Empleado.CorreoInstitucional</p>
            </div>
            <div class="empleado-badge">
                <span class="badge">
                    <i class="fas fa-user-times"></i>
                    Sin Usuario Asociado
                </span>
            </div>
        </div>
    </div>

    <!-- Formulario de asociación -->
    <div class="form-card">
        <form asp-action="AsociarUsuario" method="post" id="asociarUsuarioForm" novalidate>
            <input asp-for="Empleado.IdEmpleado" type="hidden" />

            <!-- Sección de información de usuario -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-user-cog"></i>
                        Información de Usuario
                    </h2>
                    <p class="section-subtitle">Datos de acceso al sistema</p>
                </div>

                <div class="form-grid">
                    <!-- Username -->
                    <div class="form-group">
                        <label asp-for="Usuario.Username" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <span>Nombre de Usuario</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Usuario.Username" class="form-control" placeholder="Ej: juan.garcia" maxlength="50" />
                            <button type="button" class="btn-generate" onclick="generarUsername()">
                                <i class="fas fa-magic"></i>
                                <span>Generar</span>
                            </button>
                            <span asp-validation-for="Usuario.Username" class="validation-message"></span>
                            <div class="input-help">
                                <i class="fas fa-info-circle"></i>
                                <span>Se sugiere usar formato: nombre.apellido</span>
                            </div>
                        </div>
                    </div>

                    <!-- Contraseña Temporal -->
                    <div class="form-group">
                        <label asp-for="Usuario.Contrasenia" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <span>Contraseña Temporal</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <div class="input-wrapper">
                                <input asp-for="Usuario.Contrasenia" type="password" class="form-control" placeholder="Contraseña temporal" minlength="8" />
                                <button type="button" class="toggle-password" data-target="Usuario_Contrasenia">
                                    <i class="fas fa-eye"></i>
                                </button>
                            </div>
                            <button type="button" class="btn-generate" onclick="generarContrasena()">
                                <i class="fas fa-key"></i>
                                <span>Generar</span>
                            </button>
                            <span asp-validation-for="Usuario.Contrasenia" class="validation-message"></span>

                            <!-- Indicador de fuerza de contraseña -->
                            <div class="password-strength">
                                <div class="strength-bar">
                                    <div class="strength-fill" id="strengthBar"></div>
                                </div>
                                <div class="strength-info">
                                    <span class="strength-text" id="strengthText">Ingrese una contraseña</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Confirmar Contraseña -->
                    <div class="form-group">
                        <label asp-for="ConfirmarContrasenia" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-check-double"></i>
                            </div>
                            <span>Confirmar Contraseña</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <div class="input-wrapper">
                                <input asp-for="ConfirmarContrasenia" type="password" class="form-control" placeholder="Confirme la contraseña" />
                                <div class="match-indicator" id="matchIndicator">
                                    <i class="fas fa-times"></i>
                                </div>
                            </div>
                            <span asp-validation-for="ConfirmarContrasenia" class="validation-message"></span>
                            <div class="match-message" id="matchMessage"></div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Sección de permisos y roles -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-shield-alt"></i>
                        Permisos y Accesos
                    </h2>
                    <p class="section-subtitle">Configuración de roles y sistemas</p>
                </div>

                <div class="form-grid">
                    <!-- Rol del Usuario -->
                    <div class="form-group">
                        <label asp-for="Usuario.FK_IdRol" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user-tag"></i>
                            </div>
                            <span>Rol del Usuario</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <select asp-for="Usuario.FK_IdRol" class="form-control" id="rolSelect">
                                <option value="">Seleccione un rol</option>
                                <option value="1">Administrador</option>
                                <option value="2">Supervisor</option>
                                <option value="3">Operador</option>
                                <option value="4">Consultor</option>
                            </select>
                            <span asp-validation-for="Usuario.FK_IdRol" class="validation-message"></span>
                            <div class="role-description" id="roleDescription"></div>
                        </div>
                    </div>

                    <!-- Sistema Asignado -->
                    <div class="form-group">
                        <label asp-for="Usuario.FK_IdSistema" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-server"></i>
                            </div>
                            <span>Sistema Asignado</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <select asp-for="Usuario.FK_IdSistema" class="form-control">
                                <option value="">Seleccione un sistema</option>
                                <option value="1">GEKO - Sistema Principal</option>
                                <option value="2">GEKO - Gestión de Inventarios</option>
                                <option value="3">GEKO - Recursos Humanos</option>
                                <option value="4">GEKO - Contabilidad</option>
                            </select>
                            <span asp-validation-for="Usuario.FK_IdSistema" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Estado del Usuario -->
                    <div class="form-group">
                        <label asp-for="Usuario.Estado" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-toggle-on"></i>
                            </div>
                            <span>Estado del Usuario</span>
                        </label>
                        <div class="input-container">
                            <div class="toggle-container">
                                <input asp-for="Usuario.Estado" type="checkbox" class="toggle-input" id="estadoToggle" checked />
                                <label for="estadoToggle" class="toggle-label">
                                    <span class="toggle-slider"></span>
                                    <span class="toggle-text">Activo</span>
                                </label>
                            </div>
                            <div class="input-help">
                                <i class="fas fa-info-circle"></i>
                                <span>El usuario podrá acceder al sistema inmediatamente</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Configuraciones adicionales -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-cogs"></i>
                        Configuraciones Adicionales
                    </h2>
                    <p class="section-subtitle">Opciones de seguridad y notificaciones</p>
                </div>

                <div class="config-grid">
                    <div class="config-item">
                        <div class="config-control">
                            <input type="checkbox" id="cambiarContrasena" name="CambiarContrasenaEnPrimerAcceso" checked />
                            <label for="cambiarContrasena" class="config-label">
                                <span class="config-checkbox"></span>
                                <div class="config-content">
                                    <h4>Cambiar contraseña en el primer acceso</h4>
                                    <p>El usuario deberá cambiar su contraseña temporal al iniciar sesión por primera vez</p>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="config-item">
                        <div class="config-control">
                            <input type="checkbox" id="enviarCredenciales" name="EnviarCredencialesPorCorreo" checked />
                            <label for="enviarCredenciales" class="config-label">
                                <span class="config-checkbox"></span>
                                <div class="config-content">
                                    <h4>Enviar credenciales por correo</h4>
                                    <p>Se enviará un email con las credenciales al correo institucional del empleado</p>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="config-item">
                        <div class="config-control">
                            <input type="checkbox" id="habilitarNotificaciones" name="HabilitarNotificaciones" checked />
                            <label for="habilitarNotificaciones" class="config-label">
                                <span class="config-checkbox"></span>
                                <div class="config-content">
                                    <h4>Habilitar notificaciones</h4>
                                    <p>El usuario recibirá notificaciones del sistema y alertas de seguridad</p>
                                </div>
                            </label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="form-actions">
                <div class="actions-container">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("Detalle", "Empleados", new { id = Model.Empleado.IdEmpleado })'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>

                    <button type="button" class="btn-preview" onclick="mostrarVistaPrevia()">
                        <i class="fas fa-eye"></i>
                        <span>Vista Previa</span>
                    </button>

                    <button type="submit" class="btn-submit" id="submitBtn">
                        <i class="fas fa-user-plus"></i>
                        <span>Crear Usuario</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de vista previa -->
<div class="modal-overlay" id="previewModal">
    <div class="modal-container large">
        <div class="modal-header">
            <h3>Vista Previa - Nuevo Usuario</h3>
            <button class="modal-close" onclick="cerrarVistaPrevia()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="preview-content">
                <div class="preview-section">
                    <h4><i class="fas fa-user"></i> Empleado</h4>
                    <div class="preview-info">
                        <span class="preview-label">Nombre:</span>
                        <span class="preview-value">@Model.Empleado.NombreEmpleado @Model.Empleado.ApellidoEmpleado</span>
                    </div>
                    <div class="preview-info">
                        <span class="preview-label">Correo:</span>
                        <span class="preview-value">@Model.Empleado.CorreoInstitucional</span>
                    </div>
                </div>

                <div class="preview-section">
                    <h4><i class="fas fa-user-cog"></i> Usuario del Sistema</h4>
                    <div class="preview-info">
                        <span class="preview-label">Usuario:</span>
                        <span class="preview-value" id="previewUsername">-</span>
                    </div>
                    <div class="preview-info">
                        <span class="preview-label">Contraseña:</span>
                        <span class="preview-value" id="previewPassword">••••••••</span>
                    </div>
                    <div class="preview-info">
                        <span class="preview-label">Rol:</span>
                        <span class="preview-value" id="previewRole">-</span>
                    </div>
                    <div class="preview-info">
                        <span class="preview-label">Sistema:</span>
                        <span class="preview-value" id="previewSystem">-</span>
                    </div>
                    <div class="preview-info">
                        <span class="preview-label">Estado:</span>
                        <span class="preview-value" id="previewStatus">-</span>
                    </div>
                </div>

                <div class="preview-section">
                    <h4><i class="fas fa-cogs"></i> Configuraciones</h4>
                    <div class="config-preview" id="configPreview">
                        <!-- Se llena dinámicamente -->
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn-secondary" onclick="cerrarVistaPrevia()">
                <i class="fas fa-arrow-left"></i>
                Volver al Formulario
            </button>
            <button class="btn-primary" onclick="confirmarCreacion()">
                <i class="fas fa-check"></i>
                Confirmar y Crear
            </button>
        </div>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal-overlay" id="confirmModal">
    <div class="modal-container">
        <div class="modal-header">
            <h3>Confirmar Creación de Usuario</h3>
            <button class="modal-close" onclick="cerrarConfirmacion()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="modal-icon success">
                <i class="fas fa-user-plus"></i>
            </div>
            <p>¿Está seguro que desea crear el usuario con la configuración mostrada?</p>
            <p class="modal-warning">Se enviará un correo con las credenciales al empleado.</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" onclick="cerrarConfirmacion()">
                <i class="fas fa-times"></i>
                Cancelar
            </button>
            <button class="btn-confirm" onclick="procesarCreacion()">
                <i class="fas fa-check"></i>
                Crear Usuario
            </button>
        </div>
    </div>
</div>

<!-- JavaScript -->
<script src="~/js/asociar-usuario.js"></script>
