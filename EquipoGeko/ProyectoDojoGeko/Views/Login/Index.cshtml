@{
    ViewData["Title"] = "Login";
}

<body style="background-image: url('/imagenes/FondoLogin.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center; background-attachment: fixed;">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card shadow" style="border-radius: 1rem; background-color: rgba(255, 255, 255, 0.9);">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/imagenes/FondoLogin2.png"
                                     alt="login form" class="img-fluid img-vertical" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">

                                    <!-- FORMULARIO PRINCIPAL DE LOGIN -->
                                    <form id="loginForm" method="post" asp-controller="Login" asp-action="Login" novalidate>
                                        <div class="text-center mb-4">
                                            <h2 class="fw-bold mb-2">Iniciar Sesión</h2>
                                            <p class="text-muted">Ingresa tus credenciales para continuar</p>
                                        </div>

                                        <!-- Mostrar mensaje de error si existe -->
                                        @if (!string.IsNullOrEmpty(ViewBag.Mensaje as string))
                                        {
                                        <div class="alert alert-danger" role="alert">
                                            @ViewBag.Mensaje
                                        </div>
                                        }

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="usuario"><i class="bi bi-person-fill"></i> Usuario</label>
                                            <input type="text" id="usuario" name="usuario" class="form-control form-control-lg" placeholder="TuUsuario123" required minlength="3" />
                                            <div class="invalid-feedback">Ingresa un usuario válido (mínimo 3 caracteres).</div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="password"><i class="bi bi-lock-fill"></i> Contraseña</label>
                                            <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="******" required minlength="6" />
                                            <div class="invalid-feedback">La contraseña debe tener al menos 6 caracteres.</div>
                                        </div>

                                        <div class="pt-1 mb-4 text-center">
                                            <button class="btn btn-primary btn-lg w-100" type="submit">Ingresar</button>
                                        </div>

                                        <div class="text-center">
                                            <a class="small text-muted" href="#">¿Olvidaste tu contraseña?</a><br />
                                            <span class="text-muted">¿No tienes una cuenta?</span>
                                            <a href="#" style="color: #393f81;"> Regístrate aquí</a>
                                        </div>

                                        <div class="text-center mt-2">
                                            <a href="#" class="small text-muted">Política de privacidad</a>
                                        </div>
                                    </form>

                                    <!-- SEPARADOR -->
                                    <hr class="my-4">

                                    <!-- FORMULARIO DE PRUEBA -->
                                    <div class="text-center">
                                        <h5 class="text-muted mb-3">🧪 Modo de Prueba</h5>
                                        <form method="post" asp-controller="Login" asp-action="LoginPrueba">
                                            <input type="hidden" name="usuario" value="AdminDev" />
                                            <input type="hidden" name="password" value="12345678" />
                                            <button type="submit" class="btn btn-warning btn-lg w-100">
                                                <i class="bi bi-gear-fill"></i> Login de Prueba (AdminDev)
                                            </button>
                                        </form>
                                        <small class="text-muted d-block mt-2">
                                            Este botón configura automáticamente las credenciales de prueba
                                        </small>
                                    </div>

                                    <!-- ENLACES DE DEBUG (Solo para desarrollo) -->
                                    <div class="text-center mt-4">
                                        <div class="d-flex justify-content-center gap-2">
                                            <a href="/Login/GenerarHash" class="btn btn-outline-secondary btn-sm" target="_blank">
                                                🔧 Generar Hash
                                            </a>
                                            <a href="/Login/ProbarHash" class="btn btn-outline-secondary btn-sm" target="_blank">
                                                🔍 Probar Hash
                                            </a>
                                        </div>
                                        <small class="text-muted d-block mt-1">
                                            Herramientas de desarrollo
                                        </small>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

@section Scripts {
    <script src="~/js/login-validation.js"></script>
}