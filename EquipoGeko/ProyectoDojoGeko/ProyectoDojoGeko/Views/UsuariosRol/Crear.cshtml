@model ProyectoDojoGeko.Models.Usuario.UsuariosRolFormViewModel
@{
    ViewData["Title"] = "Asignar Rol(es) a Usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="empleado-form-container">
    <!-- Header de la pagina -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-key"></i>
                Asignar Rol(es) a Usuario
            </h1>
            <p class="page-subtitle">
				Seleccione el usuario y el rol(es) a asignar
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Usuarios")" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                <span>Volver a la Lista</span>
            </a>
        </div>
    </div>

    <!-- Formulario principal -->
    <div class="form-card">
        <form asp-action="Crear" method="post">
            @Html.AntiForgeryToken()

            <!-- Sección de información -->
            <div class="form-section">
                <div class="form-grid">
                    <!-- Usuario -->
                    <div class="form-group">
                        <label asp-for="FK_IdUsuario" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <span>Usuario</span>
                            <span class="required">*</span>
                        </label>
                        <select asp-for="FK_IdUsuario" asp-items="Model.Usuarios" class="form-control">
                            <option value="">Selecciona un usuario</option>
                        </select>
                        <span asp-validation-for="FK_IdUsuario" class="MensajeError"></span>
                    </div>

                    <!-- Roles -->
                    <div class="form-group">
                        <label asp-for="FK_IdsRol" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user-tag"></i>
                            </div>
                            <span>Roles</span>
                            <span class="required">*</span>
                        </label>
                        <select asp-for="FK_IdsRol" asp-items="Model.Roles" class="form-control" multiple="multiple">
                        </select>
                        <span asp-validation-for="FK_IdsRol" class="MensajeError"></span>
                        <small class="form-text text-muted">Mantén presionada la tecla Ctrl para seleccionar múltiples opciones</small>
                    </div>
                </div>
            </div>

            <!-- Botones de accion -->
            <div class="form-actions">
                <div class="actions-container">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("Index", "UsuariosRol")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>

                    <button type="reset" class="btn-reset" id="resetBtn">
                        <i class="fas fa-undo"></i>
                        <span>Limpiar</span>
                    </button>

                    <button type="submit" class="btn-submit" id="submitBtn">
                        <i class="fas fa-save"></i>
                        <span>Guardar</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de confirmacion -->
<div class="modal-overlay" id="confirmModal">
    <div class="modal-container">
        <div class="modal-header">
            <h3>Confirmar Accion</h3>
            <button class="modal-close" id="closeModal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="modal-icon success">
                <i class="fas fa-question-circle"></i>
            </div>
            <p id="modalMessage">¿Está seguro que desea asignar estos roles al usuario?</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" id="cancelAction">
                <i class="fas fa-times"></i>
                Cancelar
            </button>
            <button class="btn-confirm" id="confirmAction">
                <i class="fas fa-check"></i>
                Confirmar
            </button>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/RolPermiso.css" />
    <style>
        /* Estilos adicionales para el select múltiple */
        select[multiple] {
            min-height: 150px;
            padding: 8px 12px;
        }

            select[multiple] option {
                padding: 8px;
                margin: 2px 0;
                border-radius: 4px;
                transition: all 0.2s;
            }

                select[multiple] option:hover {
                    background-color: #06D6A0;
                    color: white;
                }

                select[multiple] option:checked {
                    background-color: #06D6A0;
                    color: white;
                }

        .form-text.text-muted {
            margin-top: 8px;
            font-size: 12px;
            color: #6c757d;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Inicialización del modal de confirmación
            $('#submitBtn').click(function(e) {
                e.preventDefault();
                $('#confirmModal').addClass('active');
            });

            $('#closeModal, #cancelAction').click(function() {
                $('#confirmModal').removeClass('active');
            });

            $('#confirmAction').click(function() {
                $('form').submit();
            });

            // Mejorar la experiencia del select múltiple
            $('select[multiple]').select2({
                placeholder: "Seleccione los permisos",
                allowClear: true,
                width: '100%',
                theme: 'bootstrap4'
            });
        });
    </script>
}