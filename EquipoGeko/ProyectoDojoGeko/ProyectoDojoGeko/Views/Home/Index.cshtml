@{
    ViewData["Title"] = "Inicio - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/home-styles.css">
</head>
<body>
    <main>
        <section class="hero">
            <div class="container">
                <div class="grid">
                    <div class="hero-content">
                        <div>
                            <h1>Seguridad Inteligente para su Negocio</h1>
                            <p>
                                Gestionar de forma centralizada y segura el acceso a los sistemas informáticos internos, mediante un modelo
                                multiempresa, orientado a la administración de usuarios, roles, permisos y funcionalidades.
                            </p>
                        </div>
                        <div class="btn-container">
                            <a href="/login/index" class="btn btn-primary btn-lg">
                                Iniciar sesión
                            </a>
                        </div>
                    </div>
                    <div class="hero-image">
                        <img src="~/imagenes/security-dashboard.png" alt="Sistema de seguridad GEKO" width="550" height="550" />
                    </div>
                </div>
            </div>
        </section>

        <section id="features" class="features">
            <div class="container">
                <div class="text-center">
                    <h2>Características Principales</h2>
                    <p class="subtitle">
                        Nuestros sistemas de seguridad ofrecen protección completa con tecnología de vanguardia
                    </p>
                </div>
                <div class="features-grid">
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-video"></i>
                        </div>
                        <h3>Videovigilancia HD</h3>
                        <p>
                            Cámaras de alta definición con visión nocturna y detección de movimiento.
                        </p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-bell"></i>
                        </div>
                        <h3>Alarmas Inteligentes</h3>
                        <p>
                            Sistemas de alarma con sensores avanzados y notificaciones instantáneas.
                        </p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-shield-alt"></i>
                        </div>
                        <h3>Monitoreo 24/7</h3>
                        <p>
                            Centro de monitoreo profesional las 24 horas, todos los días del año.
                        </p>
                    </div>
                    <div class="feature-card">
                        <div class="feature-icon">
                            <i class="fas fa-lock"></i>
                        </div>
                        <h3>Control de Acceso</h3>
                        <p>
                            Sistemas de control de acceso biométricos y con tarjetas inteligentes.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <section id="solutions" class="solutions">
            <div class="container">
                <div class="text-center">
                    <h2>Nuestras Soluciones</h2>
                    <p class="subtitle">
                        Soluciones personalizadas para cada tipo de cliente
                    </p>
                </div>
                <div class="solutions-grid">
                    <div class="solution-card">
                        <div class="card-content">
                            <h3>Residencial</h3>
                            <p>
                                Protección completa para su hogar con sistemas fáciles de usar y control desde su smartphone.
                            </p>
                            <ul>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>Alarmas y sensores</span>
                                </li>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>Cámaras de seguridad</span>
                                </li>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>Cerraduras inteligentes</span>
                                </li>
                            </ul>
                            <a href="#" class="btn btn-primary w-100 d-block">Más Información</a>
                        </div>
                    </div>
                    <div class="solution-card">
                        <div class="card-content">
                            <h3>Comercial</h3>
                            <p>
                                Soluciones robustas para negocios de todos los tamaños con monitoreo profesional.
                            </p>
                            <ul>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>CCTV avanzado</span>
                                </li>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>Control de acceso</span>
                                </li>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>Sistemas anti-intrusión</span>
                                </li>
                            </ul>
                            <a href="#" class="btn btn-primary w-100 d-block">Más Información</a>
                        </div>
                    </div>
                    <div class="solution-card">
                        <div class="card-content">
                            <h3>Industrial</h3>
                            <p>
                                Protección de alto nivel para instalaciones industriales y áreas críticas.
                            </p>
                            <ul>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>Perímetro seguro</span>
                                </li>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>Detección de intrusos</span>
                                </li>
                                <li>
                                    <i class="fas fa-chevron-right"></i>
                                    <span>Integración con sistemas</span>
                                </li>
                            </ul>
                            <a href="#" class="btn btn-primary w-100 d-block">Más Información</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>

    <script src="~/js/home-scripts.js"></script>
</body>
</html>
