@{
    ViewData["Title"] = "Detalle de la Solicitud - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayoutSistema.cshtml";
}

<link rel="stylesheet" href="~/css/empleado-detalle.css" />
<link rel="stylesheet" href="~/css/detalle-solicitud.css" />

<div class="empleado-detalle-container">
    <!-- Encabezado -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-file-alt icon-naranja"></i>
                Detalle de Solicitud
            </h1>
            <p class="page-subtitle">Información detallada sobre la solicitud de vacaciones</p>
        </div>
    </div>

    <div class="empleado-card">

        <!-- Encabezado -->
        <div class="info-box">
            <h2 class="empleado-nombre-s">Brandon Alejandro López</h2>
            <p class="empleado-id">Número de solicitud: <strong>2</strong></p>
            <div class="estado-box">
                <span class="badge estado-vigente">
                    <i class="fas fa-check"></i> Vigente
                </span>
            </div>
            <div class="detalle-mini-grid">
                <div class="stat-item">
                    <div class="stat-label">Días solicitados</div>
                    <div class="stat-value">5 días</div>
                </div>
                <div class="stat-item">
                    <div class="stat-label">Fecha de creación</div>
                    <div class="stat-value">24/07/2025</div>
                </div>
            </div>
        </div>

        <!-- Información del Empleado -->
        <div class="info-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-user icon-naranja"></i> Información del Empleado
                </h3>
            </div>
            <div class="info-grid">
                <div class="info-item">
                    <div class="info-label"><i class="fas fa-id-card icon-naranja"></i> Código</div>
                    <div class="info-value">EMP001</div>
                </div>
                <div class="info-item">
                    <div class="info-label"><i class="fas fa-briefcase icon-naranja"></i> Puesto</div>
                    <div class="info-value">Desarrollador</div>
                </div>
                <div class="info-item">
                    <div class="info-label"><i class="fas fa-calendar-plus icon-naranja"></i> Fecha de Ingreso</div>
                    <div class="info-value">01/01/2023</div>
                </div>
            </div>
        </div>

        <!-- Fechas Solicitadas -->
        <div class="info-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-calendar-alt icon-naranja"></i> Fechas Solicitadas
                </h3>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Días Hábiles</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>05/08/2025</td>
                            <td>07/08/2025</td>
                            <td>3</td>
                        </tr>
                        <tr>
                            <td>10/08/2025</td>
                            <td>11/08/2025</td>
                            <td>2</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Footer -->
        <div class="empleado-footer">
            <div class="footer-actions">
                <a href="@Url.Action("RecursosHumanos", "Solicitudes")" class="btn btn-create">
                    <i class="fas fa-list"></i>
                    Volver al Listado
                </a>
            </div>
        </div>
    </div>
</div>
