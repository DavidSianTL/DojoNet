@model List<ProyectoDojoGeko.Models.SolicitudEncabezadoViewModel>

@{
    ViewData["Title"] = "Autorización de Solicitudes";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    var todasLasSolicitudes = Model.ToList();
    var totalSolicitudes = todasLasSolicitudes.Count;

    var codigoEmpleado = Context.Session.GetString("CodigoEmpleado") ?? "N/A";
    var nombreEmpleado = Context.Session.GetString("NombreCompletoEmpleado") ?? "N/A";
}

<div class="solicitudes-container azul">

    <!-- Encabezado de la Página -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-user-check"></i>
                Solicitudes de Vacaciones
            </h1>
            <p class="page-subtitle">
                Revisa todas las solicitudes de vacaciones ingresadas.
            </p>
            <p style="color: red;">
                Solicitudes encontradas: @Model?.Count
            </p>
        </div>
    </div>

    <hr class="section-divider" />

    <!-- Tarjetas de estadísticas -->
    <div class="stats-grid">
        <div class="stat-card pendientes">
            <div class="stat-icon">
                <i class="fas fa-clipboard-list"></i>
            </div>
            <div class="stat-content">
                <div class="stat-number">@totalSolicitudes</div>
                <div class="stat-label">Solicitudes Registradas</div>
                <div class="stat-change positive">
                    <i class="fas fa-arrow-up"></i>
                    <span>+@totalSolicitudes este mes</span>
                </div>
            </div>
        </div>
    </div>

    <hr class="section-divider" />

    <!-- Información del usuario -->
    <div class="form-card">
        <div >
            <span><b>Código empleado:</b> @codigoEmpleado</span>
            <span><b>Nombre:</b> @nombreEmpleado</span>
        </div>
    </div>

    <hr class="section-divider" />

    <!-- Tabla de solicitudes -->
    <div class="table-container">
        <div class="solicitudes-header">
            <h2>
                <i class="fas fa-clipboard-list"></i>
                Todas las Solicitudes
            </h2>
        </div>

        <table class="empresas-table" id="tablaAutorizaciones">
            <thead>
                <tr>
                    <th>N° Solicitud</th>
                    <th>Empleado</th>
                    <th>Días Solicitados</th>
                    <th>Estado</th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tbody>
                @if (todasLasSolicitudes.Any())
                {
                    foreach (var solicitud in todasLasSolicitudes)
                    {
                        <tr>
                            <td>@solicitud.IdSolicitud</td>
                            <td>@solicitud.NombreEmpleado</td>
                            <td>@solicitud.DiasSolicitadosTotal</td>
                            <td>
                                @(solicitud.Estado == 1 ? "Ingresada" : "Otro")
                            </td>
                            <td>
                                <a href="@Url.Action("Detalle", "Solicitudes", new { id = solicitud.IdSolicitud })"
                                   class="btn-detail">
                                    <i class="fas fa-eye"></i> Ver detalle
                                </a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" style="text-align: center;">
                            No hay solicitudes registradas
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>

@section Styles {
    <link rel="stylesheet" href="~/css/empresas.css" />

    <style>
        /* Contenedor general con margen izquierdo */
        .solicitudes-container {
            padding: 2rem;
            margin-left: 2rem;
        }

        /* Línea separadora */
        .section-divider {
            border: none;
            height: 1px;
            background-color: #a6b1bb;
            margin: 2rem 0;
        }

        .solicitudes-container.azul .solicitudes-header h2 {
            font-size: 1.25rem;
            color: #002244;
            margin-bottom: 1rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .solicitudes-container.azul .btn-detail {
            background-color: #002244;
            color: #fff;
            padding: 0.35rem 0.75rem;
            border-radius: 0.5rem;
            font-size: 0.875rem;
            text-decoration: none;
            transition: background 0.3s;
            display: inline-flex;
            align-items: center;
            gap: 0.35rem;
        }

            .solicitudes-container.azul .btn-detail:hover {
                background-color: #001933;
            }

        .solicitudes-container.azul .stat-card.pendientes .stat-icon {
            background: linear-gradient(135deg, #002f5f, #001933);
        }

        .solicitudes-container.azul .stat-change.positive {
            color: #002244;
            font-weight: 500;
            margin-top: 0.25rem;
        }

        .solicitudes-container.azul .page-title {
            color: #002244;
        }

        .solicitudes-container.azul .page-subtitle {
            color: #004080;
        }

        .solicitudes-container .info-row {
            display: flex;
            justify-content: space-between;
            padding: 0.75rem 0 0.25rem;
        }

            .solicitudes-container .info-row.compacto {
                gap: 2rem;
                font-size: 1rem;
                line-height: 1.4rem;
            }

        .empresas-table th,
        .empresas-table td {
            text-align: left;
            padding: 0.75rem 1rem;
        }
    </style>
}
