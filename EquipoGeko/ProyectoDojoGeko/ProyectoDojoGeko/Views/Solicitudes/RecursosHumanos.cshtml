@model List<ProyectoDojoGeko.Models.SolicitudEncabezadoViewModel>

@{
    ViewData["Title"] = "Listado de Solicitudes";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    var todosLosEstados = ViewBag.Estados;
    var todasLasSolicitudes = Model.ToList();
    var totalSolicitudes = todasLasSolicitudes.Count;
    var estados = ViewBag.Estados as List<SelectListItem> ?? new List<SelectListItem>();
}

<div class="empresas-container">

    <!--Header-->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fa-solid fa-clipboard-list"></i>
                Solicitudes de vacaciones <br> RRHH
            </h1>
            <p class="page-subtitle">
                Listado de solicitudes de vacaciones de los empleados.
            </p>
        </div>
        <div class="header-actions">
            <form method="get" asp-action="RecursosHumanos" asp-controller="Solicitudes">
                <div class="input-group">
                    <div style="position: relative;">
                        <i class="fa-solid fa-user-tie" style="position: absolute; left: 16px; top: 50%; transform: translateY(-50%); color: var(--gray-400);"></i>
                        <input id="searchInput" type="text" name="nombresEmpleado" placeholder="Buscar empleado..." class="search-input" value="@Context.Request.Query["nombresEmpleado"]" />
                    <button type="submit" class="btn btn-search">
                        <i class="fas fa-search"></i>
                    </button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Estadísticas y filtros -->
    <div class="filters-stats">

        <!-- Estadísticas -->
        <div class="stats-cards">
            <div class="stat-card">
                <div class="status-icon"><i class="fa-solid fa-rectangle-list"></i></div>
                <div class="stat-content">
                    <div class="stat-number">@totalSolicitudes</div>
                    <div class="stat-label">Total Solicitudes</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="status-icon pendiente"><i class="fa-solid fa-stopwatch"></i></div>
                <div class="stat-content">
                    <div class="stat-number" id="empleadosActivos">@Model.Count(e => e.Estado == 2)</div>
                    <div class="stat-label">Estado Autorizada</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="status-icon vigente"><i class="fa-solid fa-check"></i></div>
                <div class="stat-content">
                    <div class="stat-number" id="empleadosActivos">@Model.Count(e => e.Estado == 3)</div>
                    <div class="stat-label">Estado Vigente</div>
                </div>
            </div>
        </div>

        <div class="filters">
            <div class="filter-group">
                <div class="filter-group d-flex justify-content-between align-items-center w-100">
                <form method="get" action="/Solicitudes/RecursosHumanos" class="d-flex gap-2 align-items-center">
                    <label for="estadoFilter">Estado:</label>
                    <select id="estadoFilter" name="estadoSolicitud" class="filter-select">
                        <option value="">Todos los estados</option>
                        <option value="Ingresada" selected="@(Context.Request.Query["estadoSolicitud"] == "Ingresada")">Ingresada</option>
                        <option value="Autorizada" selected="@(Context.Request.Query["estadoSolicitud"] == "Autorizada")">Autorizada</option>
                        <option value="Vigente" selected="@(Context.Request.Query["estadoSolicitud"] == "Vigente")">Vigente</option>
                        <option value="Cancelada" selected="@(Context.Request.Query["estadoSolicitud"] == "Cancelada")">Cancelada</option>
                        <option value="Finalizada" selected="@(Context.Request.Query["estadoSolicitud"] == "Finalizada")">Finalizada</option>
                    </select>

                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i>
                    </button>
                </form>

                <button id="resetFilters" class="btn-reset-filters ms-auto">
                    <i class="fas fa-sync-alt"></i>
                    Reiniciar Filtro
                </button>

                <script>
                    // Reiniciar filtros
                    document.getElementById("resetFilters").addEventListener("click", function () {
                        window.location.href = "/Solicitudes/RecursosHumanos";
                    });
                </script>
            </div>
        </div>
    </div>

        <!-- Tabla -->
        <div class="table-container">
            <table class="empresas-table" id="rhTable">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre del Empleado</th>
                        <th>Cantidad de días</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {

                        foreach (var solicitud in Model)
                        {
                            <tr>
                                <td>@solicitud.IdSolicitud</td>
                                <td>@solicitud.NombreEmpleado</td>
                                <td>@solicitud.DiasSolicitadosTotal</td>
                                <td>
                                    @solicitud.Estado <br />
                                </td>
                                <td>
                                    <a href="@Url.Action("DetalleRH", "Solicitudes", new { id = solicitud.IdSolicitud })" class="btn-action ver">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" style="text-align: center;">No hay solicitudes </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Paginación -->
    <div class="pagination-container">
        <div class="pagination-info">
            Mostrando <span id="showing-start">1</span> a <span id="showing-end">@Model.Count()</span> de <span id="total-items">@Model.Count()</span> solicitudes
        </div>
        <div class="pagination-controls">
            <button id="prev-page" class="pagination-btn" disabled>
                <i class="fas fa-chevron-left"></i>
                Anterior
            </button>
            <div class="pagination-pages" id="pagination-pages">
                <button class="page-btn active">1</button>
            </div>
            <button id="next-page" class="pagination-btn" disabled>
                Siguiente
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/empresas.css" />
}
<script src="~/js/solicitudes.js"></script>
<style>
    .status-icon {
        width: 40px;
        height: 40px;
        border-radius: var(--border-radius-sm);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.125rem;
        color: var(--white);
        background: linear-gradient(135deg, #87CDDE, #0694D1);
        flex-shrink: 0;
    }

        .status-icon.vigente {
            background: linear-gradient(135deg, #27C24B, #02A327);
        }

        .status-icon.pendiente {
            background: linear-gradient(135deg, #E3B862, #E3842B);
        }

    .page-title i {
        color: #0694D1;
    }

    .filters-stats {
        display: flex;
        flex-direction: column; 
        gap: 1.5rem;
    }

    .stats-cards {
        display: flex;
        gap: 1rem;
        flex-wrap: wrap;
    }

    .filters {
        display: flex;
        gap: 1rem;
        align-items: flex-end;
        justify-content: space-between;
        flex-wrap: wrap;
    }

    .reset-button-right {
        margin-left: auto;
        display: flex;
        align-items: flex-end;
    }


    .page-btn.active {
        background: #0694D1;
        color: var(--white);
        border-color: #0694D1;
    }

    .btn-action.ver {
        background: #0694D1;
    }

        .btn-action.ver:hover {
            background: #0694D1;
        }


    .btn-search {
        padding: 12px 15px;
        background: linear-gradient(135deg, #5DBACF, #0694D1)
    }

        .btn-search:hover {
            padding: 12px 15px;
            background: linear-gradient(135deg, #0694D1,#5DBACF)
        }

    .empresas-table th {
        background: #68C2DE;
        font-weight: 600;
        color: var(--gray-700);
        font-size: 14px;
        white-space: nowrap;
    }

</style>
