@model ProyectoDojoGeko.Models.SolicitudViewModel
@{
    ViewData["Title"] = "Detalle de Solicitud";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="detalle-container">
    <h1 class="page-title">
        <i class="fas fa-file-alt"></i> Detalle de Solicitud #@Model.IdSolicitud
    </h1>

    <div class="detalle-grid">
        <div class="detalle-card">
            <h2>Información del Empleado</h2>
            <p><strong>Código:</strong> @Model.CodigoEmpleado</p>
            <p><strong>Nombre:</strong> @Model.NombreEmpleado</p>
            <p><strong>Departamento:</strong> @Model.Departamento</p>
            <p><strong>Puesto:</strong> @Model.Puesto</p>
            <p><strong>Fecha de Ingreso:</strong> @Model.FechaIngreso.ToString("dd/MM/yyyy")</p>
            <p><strong>Correo:</strong> @Model.CorreoInstitucional</p>
            <p><strong>Teléfono:</strong> @Model.Telefono</p>
        </div>
    </div>

    <hr class="detalle-divider" />

        <div class="detalle-card">
            <h2>Información de la Solicitud</h2>
            <p><strong>Fecha Ingreso Solicitud:</strong> @Model.FechaIngresoSolicitud.ToString("dd/MM/yyyy")</p>
            <p><strong>Días Disponibles:</strong> @Model.DiasVacacionesDisponibles</p>
            <p><strong>Días Solicitados:</strong> @Model.DiasSolicitadosTotal</p>
            <p><strong>Estado:</strong> <span class="estado @Model.Estado.ToLower()">@Model.Estado</span></p>
        </div>
    </div>

    <h2 class="subtitulo">Días Solicitados</h2>
    <table class="tabla-detalles">
        <thead>
            <tr>
                <th>Fecha Inicio</th>
                <th>Fecha Fin</th>
                <th>Días Hábiles</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var d in Model.Detalles)
            {
                <tr>
                    <td>@d.FechaInicio.ToString("dd/MM/yyyy")</td>
                    <td>@d.FechaFin.ToString("dd/MM/yyyy")</td>
                    <td>@d.DiasHabilesTomados</td>
                </tr>
            }
        </tbody>
    </table>
        </div>
    </div>

    <hr class="detalle-divider" />

    <div class="botones-accion">
        <form method="post" asp-action="Autorizar" asp-controller="Solicitudes">
            <input type="hidden" name="idSolicitud" value="@Model.IdSolicitud" />
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i> Autorizar
            </button>
        </form>

      
   
        <form method="post" asp-action="Denegar" asp-controller="Solicitudes">
            <input type="hidden" name="idSolicitud" value="@Model.IdSolicitud" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-times"></i> Denegar
            </button>
        </form>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/empresas.css" />
    <link rel="stylesheet" href="~/css/detalle.css" />
}
