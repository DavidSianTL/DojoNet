@model ProyectoDojoGeko.Models.FeriadoVariableViewModel

<form id="formFeriadoVariable" asp-action="GuardarFeriadoVariable" asp-controller="Feriados" method="post">
    @Html.AntiForgeryToken()

    @if (Model.IsEditMode)
    {
        <input type="hidden" asp-for="Id" />
    }

    <div class="mb-3">
        <label asp-for="Fecha" class="form-label"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Descripcion" class="form-label"></label>
        <input asp-for="Descripcion" class="form-control" />
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="TipoFeriadoId" class="form-label"></label>
                <select asp-for="TipoFeriadoId" class="form-control" asp-items="@(new SelectList(ViewBag.TiposFeriado, "TipoFeriadoId", "Nombre"))">
                    <option value="">Seleccione un tipo</option>
                </select>
                <span asp-validation-for="TipoFeriadoId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label asp-for="ProporcionDia" class="form-label"></label>
                <input asp-for="ProporcionDia" class="form-control" />
                <span asp-validation-for="ProporcionDia" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
