@{
    ViewData["Title"] = "Gestión de Feriados";
    Layout = "~/Views/Shared/_DashboardLayoutSistema.cshtml";

}

<div class="empresas-container">

    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-calendar-check"></i>
                Gestión de asuetos y eventos especiales
            </h1>
            <p class="page-subtitle">
                Gestiona todos los eventos especiales de la empresa y asuetos nacionales en el sistema.
            </p>
        </div>
    </div>
    <br />

    <div class="stats-cards">
        <div class="stat-card shadow-card shadow-card-f">
            <div class="stat-content d-flex align-items-center">
                <img src="~/imagenes/feriado-fijo.png" alt="Feriado Fijo" class="img-card me-4" />
                <div class="stat-text">
                    <div class="page-title">Feriados Fijos</div>
                    <div class="stat-label">Permite gestionar feriados y eventos que se celebran en la misma fecha cada año.</div>
                    <small><em>Ej: Navidad, Independencia.</em></small><br /><br />
                    <a href="@Url.Action("FeriadosFijos", "Feriados")" class="btn-visitar btn-sm">
                        <i class="fas fa-list"></i> Visitar
                    </a>
                </div>
            </div>
        </div>
    </div><br/>

    <div class="stats-cards">
        <div class="stat-card shadow-card shadow-card-v">
            <div class="stat-content d-flex align-items-center">
                <img src="~/imagenes/feriado-variable.png" alt="Feriado Variable" class="img-card me-4" />
                <div class="stat-text">
                    <div class="page-title">Feriados Variables</div>
                    <div class="stat-label">Permite gestionar feriados y eventos cuya fecha cambia cada año.</div>
                    <small><em>Ej: Semana Santa, Día de la Madre.</em></small><br /><br />
                    <a href="@Url.Action("FeriadosVariables", "Feriados")" class="btn-visitarv btn-sm">
                        <i class="fas fa-list"></i> Visitar
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<br />
<br />
<!-- Información adicional -->
<div class="row mt-5">
    <div class="col-lg-10 mx-auto">
        <div class="p-4 rounded-4 shadow info-box d-flex align-items-start">
            <div class="me-3">
                <i class="fas fa-lightbulb fa-2x text-warning"></i>
            </div>
            <div>
                <h5 class="fw-bold mb-2 text-dark">Información importante</h5>
                <p class="mb-0 text-secondary">
                    Los feriados que se configuran aquí afectan directamente el cálculo de <strong>nómina y horarios</strong>.
                    <br />
                    Asegúrese de mantener esta sección actualizada para evitar <span class="text-danger fw-semibold">inconsistencias</span> en el sistema.
                </p>
            </div>
        </div>
    </div>
</div>



@section Styles {
    <link rel="stylesheet" href="~/css/empresas.css" />
    <link rel="stylesheet" href="~/css/feriados.css" />

}
<style>
    .page-title i {
        color: #145C85;
    }
</style>
