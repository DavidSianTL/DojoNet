@model ProyectoDojoGeko.Models.GestionFeriadosViewModel

@{
    ViewData["Title"] = "Gestión de Feriados";
    Layout = "~/Views/Shared/_DashboardLayoutSistema.cshtml";
}

@section Styles {
    <style>
        /* Estilos básicos para modales - SIN !important para evitar conflictos */
        .modal {
            z-index: 1055;
        }
        
        .modal-dialog {
            max-width: 500px;
        }
        
        .modal-content {
            border-radius: 0.375rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }

        /* Mejorar la apariencia de las pestañas */
        .nav-tabs .nav-link {
            border-radius: 0;
            border: none;
            color: #6c757d;
            font-weight: 500;
            padding: 12px 20px;
        }

        .nav-tabs .nav-link.active {
            background-color: #fff;
            color: #007bff;
            border-bottom: 3px solid #007bff;
        }

        .nav-tabs .nav-link:hover {
            border-color: transparent;
            color: #007bff;
        }

        /* Mejorar botones */
        .btn-sm {
            padding: 0.375rem 0.75rem;
            font-size: 0.875rem;
        }

        .table th {
            border-top: none;
            font-weight: 600;
            color: #495057;
            background-color: #f8f9fa;
        }

        /* Loading spinner */
        .loading-spinner {
            display: none;
            text-align: center;
            padding: 20px;
        }

        .spinner-border-sm {
            width: 1rem;
            height: 1rem;
        }

        /* Asegurar que los modales estén ocultos por defecto */
        .modal {
            display: none;
        }
        
        .modal.show {
            display: block;
        }
    </style>
}

<!-- Encabezado de la página -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-calendar-alt me-2"></i>@ViewData["Title"]
        </h1>
        <p class="mb-0 text-muted">Administra los días festivos fijos y variables del sistema.</p>
    </div>
</div>

<!-- Pestañas y Contenido -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-white">
        <ul class="nav nav-tabs card-header-tabs" id="feriadosTab" role="tablist">
            <li class="nav-item">
                <a class="nav-link active" id="fijos-tab" data-bs-toggle="tab" href="#fijos" role="tab" aria-controls="fijos" aria-selected="true">
                    <i class="fas fa-calendar-check me-1"></i>Feriados Fijos
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" id="variables-tab" data-bs-toggle="tab" href="#variables" role="tab" aria-controls="variables" aria-selected="false">
                    <i class="fas fa-calendar-plus me-1"></i>Feriados Variables
                </a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <div class="tab-content" id="feriadosTabContent">
            <!-- Pestaña de Feriados Fijos -->
            <div class="tab-pane fade show active" id="fijos" role="tabpanel" aria-labelledby="fijos-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h5 class="card-title mb-1">Listado de Feriados Fijos</h5>
                        <small class="text-muted">Feriados que se repiten cada año en la misma fecha</small>
                    </div>
                    <button type="button" class="btn btn-primary btn-sm" onclick="abrirModalFeriadoFijo()">
                        <i class="fas fa-plus me-1"></i> Agregar Feriado Fijo
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="15%">Fecha</th>
                                <th width="35%">Descripción</th>
                                <th width="20%">Tipo</th>
                                <th width="15%">Proporción</th>
                                <th width="15%">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.FeriadosFijos != null && Model.FeriadosFijos.Any())
                            {
                                @foreach (var item in Model.FeriadosFijos)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-info">@item.Dia/@item.Mes</span>
                                        </td>
                                        <td>@item.Descripcion</td>
                                        <td>@item.TipoFeriadoNombre</td>
                                        <td>
                                            <span class="badge @(item.ProporcionDia == 1.0m ? "bg-success" : "bg-warning")">
                                                @(item.ProporcionDia == 1.0m ? "Día Completo" : "Medio Día")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-warning btn-sm" onclick="editarFeriadoFijo(@item.Dia, @item.Mes, @item.TipoFeriadoId, '@item.Descripcion')" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminarFijo(@item.Dia, @item.Mes, @item.TipoFeriadoId)" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                        <br>No hay feriados fijos registrados
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Pestaña de Feriados Variables -->
            <div class="tab-pane fade" id="variables" role="tabpanel" aria-labelledby="variables-tab">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h5 class="card-title mb-1">Listado de Feriados Variables</h5>
                        <small class="text-muted">Feriados que cambian de fecha cada año</small>
                    </div>
                    <button type="button" class="btn btn-primary btn-sm" onclick="abrirModalFeriadoVariable()">
                        <i class="fas fa-plus me-1"></i> Agregar Feriado Variable
                    </button>
                </div>

                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th width="15%">Fecha</th>
                                <th width="35%">Descripción</th>
                                <th width="20%">Tipo</th>
                                <th width="15%">Proporción</th>
                                <th width="15%">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.FeriadosVariables != null && Model.FeriadosVariables.Any())
                            {
                                @foreach (var item in Model.FeriadosVariables)
                                {
                                    <tr>
                                        <td>
                                            <span class="badge bg-primary">@item.Fecha.ToString("dd/MM/yyyy")</span>
                                        </td>
                                        <td>@item.Descripcion</td>
                                        <td>@item.TipoFeriadoNombre</td>
                                        <td>
                                            <span class="badge @(item.ProporcionDia == 1.0m ? "bg-success" : "bg-warning")">
                                                @(item.ProporcionDia == 1.0m ? "Día Completo" : "Medio Día")
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <button type="button" class="btn btn-warning btn-sm" onclick="editarFeriadoVariable(@item.Id)" title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </button>
                                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmarEliminarVariable(@item.Id)" title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center text-muted py-4">
                                        <i class="fas fa-calendar-times fa-2x mb-2"></i>
                                        <br>No hay feriados variables registrados
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para Feriados Fijos -->
<div class="modal fade" id="modalFeriadoFijo" tabindex="-1" aria-labelledby="modalFeriadoFijoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalFeriadoFijoLabel">
                    <i class="fas fa-calendar-check me-2"></i>Agregar Feriado Fijo
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form id="formFeriadoFijo">
                <div class="modal-body">
                    @Html.AntiForgeryToken()

                    <!-- Campos ocultos para modo edición -->
                    <input type="hidden" id="Original_Dia" name="Original_Dia" />
                    <input type="hidden" id="Original_Mes" name="Original_Mes" />
                    <input type="hidden" id="Original_TipoFeriadoId" name="Original_TipoFeriadoId" />
                    <input type="hidden" id="EsEdicion" name="EsEdicion" value="false" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Dia" class="form-label">Día <span class="text-danger">*</span></label>
                                <input type="number" class="form-control" id="Dia" name="Dia" min="1" max="31" required />
                                <div class="invalid-feedback" id="Dia-error"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Mes" class="form-label">Mes <span class="text-danger">*</span></label>
                                <select class="form-select" id="Mes" name="Mes" required>
                                    <option value="">Seleccione</option>
                                    <option value="1">Enero</option>
                                    <option value="2">Febrero</option>
                                    <option value="3">Marzo</option>
                                    <option value="4">Abril</option>
                                    <option value="5">Mayo</option>
                                    <option value="6">Junio</option>
                                    <option value="7">Julio</option>
                                    <option value="8">Agosto</option>
                                    <option value="9">Septiembre</option>
                                    <option value="10">Octubre</option>
                                    <option value="11">Noviembre</option>
                                    <option value="12">Diciembre</option>
                                </select>
                                <div class="invalid-feedback" id="Mes-error"></div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="Descripcion" class="form-label">Descripción <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="Descripcion" name="Descripcion" maxlength="100" required placeholder="Ej: Día de la Independencia" />
                        <div class="invalid-feedback" id="Descripcion-error"></div>
                    </div>

                    <div class="mb-3">
                        <label for="TipoFeriadoId" class="form-label">Tipo de Feriado <span class="text-danger">*</span></label>
                        <select class="form-select" id="TipoFeriadoId" name="TipoFeriadoId" required>
                            <option value="">Seleccione un tipo</option>
                            @if (Model.TiposFeriado != null)
                            {
                                @foreach (var tipo in Model.TiposFeriado)
                                {
                                    <option value="@tipo.TipoFeriadoId">@tipo.Nombre</option>
                                }
                            }
                        </select>
                        <div class="invalid-feedback" id="TipoFeriadoId-error"></div>
                    </div>

                    <div class="mb-3">
                        <label for="Proporcion" class="form-label">Proporción</label>
                        <select class="form-select" id="Proporcion" name="Proporcion">
                            <option value="1.0">Día Completo</option>
                            <option value="0.5">Medio Día</option>
                        </select>
                        <div class="invalid-feedback" id="Proporcion-error"></div>
                    </div>

                    <!-- Loading spinner -->
                    <div class="loading-spinner" id="loadingSpinnerFijo">
                        <div class="spinner-border spinner-border-sm text-primary" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <span class="ms-2">Guardando...</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times me-1"></i>Cancelar
                    </button>
                    <button type="submit" class="btn btn-primary" id="btnGuardarFijo">
                        <i class="fas fa-save me-1"></i>Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para Feriados Variables -->
<div class="modal fade" id="modalFeriadoVariable" tabindex="-1" aria-labelledby="modalFeriadoVariableLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalFeriadoVariableLabel">
                    <i class="fas fa-calendar-plus me-2"></i>Formulario
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="modalBodyVariable">
                <!-- Loading spinner -->
                <div class="loading-spinner" id="loadingSpinnerVariable">
                    <div class="spinner-border spinner-border-sm text-primary" role="status">
                        <span class="visually-hidden">Cargando...</span>
                    </div>
                    <span class="ms-2">Cargando formulario...</span>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Variables globales para los modales
        var modalFeriadoFijo = null;
        var modalFeriadoVariable = null;

        $(document).ready(function () {
            // Inicializar tooltips
            $('[data-bs-toggle="tooltip"]').tooltip();

            // Inicializar modales pero NO mostrarlos
            modalFeriadoFijo = new bootstrap.Modal(document.getElementById('modalFeriadoFijo'), {
                show: false
            });
            modalFeriadoVariable = new bootstrap.Modal(document.getElementById('modalFeriadoVariable'), {
                show: false
            });
        });

        // Funciones para Feriados Fijos
        function abrirModalFeriadoFijo() {
            // Asegurar que el modal esté inicializado
            if (!modalFeriadoFijo) {
                modalFeriadoFijo = new bootstrap.Modal(document.getElementById('modalFeriadoFijo'), {
                    show: false
                });
            }

            limpiarFormularioFijo();
            $('#modalFeriadoFijoLabel').html('<i class="fas fa-calendar-check me-2"></i>Agregar Feriado Fijo');
            $('#EsEdicion').val('false');
            modalFeriadoFijo.show();
        }

        function editarFeriadoFijo(dia, mes, tipoFeriadoId, descripcion, proporcion) {
            // Asegurar que el modal esté inicializado
            if (!modalFeriadoFijo) {
                modalFeriadoFijo = new bootstrap.Modal(document.getElementById('modalFeriadoFijo'), {
                    show: false
                });
            }

            limpiarFormularioFijo();
            $('#modalFeriadoFijoLabel').html('<i class="fas fa-edit me-2"></i>Editar Feriado Fijo');
            $('#Dia').val(dia);
            $('#Mes').val(mes);
            $('#TipoFeriadoId').val(tipoFeriadoId);
            $('#Descripcion').val(descripcion);
            $('#Proporcion').val(proporcion || '1.0');

            // Campos para edición
            $('#Original_Dia').val(dia);
            $('#Original_Mes').val(mes);
            $('#Original_TipoFeriadoId').val(tipoFeriadoId);
            $('#EsEdicion').val('true');

            modalFeriadoFijo.show();
        }

        function limpiarFormularioFijo() {
            $('#formFeriadoFijo')[0].reset();
            $('#formFeriadoFijo .is-invalid').removeClass('is-invalid');
            $('#formFeriadoFijo .invalid-feedback').empty();
            $('#Original_Dia, #Original_Mes, #Original_TipoFeriadoId').val('');
            $('#loadingSpinnerFijo').hide();
            $('#btnGuardarFijo').prop('disabled', false);
        }

        // Manejar envío del formulario de feriados fijos
        $('#formFeriadoFijo').on('submit', function (e) {
            e.preventDefault();

            var form = $(this);
            var formData = form.serialize();

            // Mostrar loading
            $('#loadingSpinnerFijo').show();
            $('#btnGuardarFijo').prop('disabled', true);

            // Limpiar errores previos
            form.find('.is-invalid').removeClass('is-invalid');
            form.find('.invalid-feedback').empty();

            $.ajax({
                type: 'POST',
                url: '@Url.Action("GuardarFeriadoFijo", "Feriados")',
                data: formData,
                success: function (response) {
                    $('#loadingSpinnerFijo').hide();
                    $('#btnGuardarFijo').prop('disabled', false);

                    if (response.success) {
                        modalFeriadoFijo.hide();
                        mostrarNotificacion(response.message, 'success');
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        mostrarNotificacion(response.message || 'Error al guardar el feriado', 'error');

                        // Mostrar errores de validación si existen
                        if (response.errors) {
                            $.each(response.errors, function(field, messages) {
                                var input = $('#' + field);
                                input.addClass('is-invalid');
                                $('#' + field + '-error').text(messages[0]);
                            });
                        }
                    }
                },
                error: function (xhr, status, error) {
                    $('#loadingSpinnerFijo').hide();
                    $('#btnGuardarFijo').prop('disabled', false);
                    mostrarNotificacion('Error de conexión con el servidor', 'error');
                    console.error('Error:', error);
                }
            });
        });

        // Funciones para Feriados Variables
        function abrirModalFeriadoVariable() {
            // Asegurar que el modal esté inicializado
            if (!modalFeriadoVariable) {
                modalFeriadoVariable = new bootstrap.Modal(document.getElementById('modalFeriadoVariable'), {
                    show: false
                });
            }

            $('#modalFeriadoVariableLabel').html('<i class="fas fa-calendar-plus me-2"></i>Agregar Feriado Variable');
            cargarFormularioVariable('@Url.Action("_FeriadoVariableForm", "Feriados")');
        }

        function editarFeriadoVariable(id) {
            // Asegurar que el modal esté inicializado
            if (!modalFeriadoVariable) {
                modalFeriadoVariable = new bootstrap.Modal(document.getElementById('modalFeriadoVariable'), {
                    show: false
                });
            }

            $('#modalFeriadoVariableLabel').html('<i class="fas fa-edit me-2"></i>Editar Feriado Variable');
            cargarFormularioVariable('@Url.Action("_FeriadoVariableForm", "Feriados")' + '/' + id);
        }

        function cargarFormularioVariable(url) {
            var modalBody = $('#modalBodyVariable');

            // Mostrar loading
            $('#loadingSpinnerVariable').show();
            modalBody.find(':not(.loading-spinner)').hide();

            modalFeriadoVariable.show();

            $.get(url)
                .done(function(data) {
                    $('#loadingSpinnerVariable').hide();
                    modalBody.html(data);
                })
                .fail(function() {
                    $('#loadingSpinnerVariable').hide();
                    modalBody.html('<div class="alert alert-danger">Error al cargar el formulario</div>');
                });
        }

        // Manejar envío de formularios variables (delegado)
        $(document).on('submit', '#formFeriadoVariable', function (e) {
            e.preventDefault();

            var form = $(this);
            var url = form.attr('action');

            $.ajax({
                type: 'POST',
                url: url,
                data: form.serialize(),
                success: function (response) {
                    if (response.success !== undefined) {
                        if (response.success) {
                            modalFeriadoVariable.hide();
                            mostrarNotificacion(response.message, 'success');
                            setTimeout(function() {
                                location.reload();
                            }, 1500);
                        } else {
                            mostrarNotificacion(response.message || 'Error al guardar', 'error');
                        }
                    } else {
                        // Respuesta HTML con errores de validación
                        $('#modalBodyVariable').html(response);
                    }
                },
                error: function () {
                    mostrarNotificacion('Error de conexión con el servidor', 'error');
                }
            });
        });

        // Funciones de eliminación
        function confirmarEliminarFijo(dia, mes, tipoFeriadoId) {
            if (confirm('¿Está seguro de que desea eliminar este feriado fijo?')) {
                eliminarFeriadoFijo(dia, mes, tipoFeriadoId);
            }
        }

        function confirmarEliminarVariable(id) {
            if (confirm('¿Está seguro de que desea eliminar este feriado variable?')) {
                eliminarFeriadoVariable(id);
            }
        }

        function eliminarFeriadoFijo(dia, mes, tipoFeriadoId) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("EliminarFeriadoFijo", "Feriados")',
                data: {
                    dia: dia,
                    mes: mes,
                    tipoFeriadoId: tipoFeriadoId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        mostrarNotificacion(response.message, 'success');
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        mostrarNotificacion(response.message || 'Error al eliminar', 'error');
                    }
                },
                error: function () {
                    mostrarNotificacion('Error de conexión con el servidor', 'error');
                }
            });
        }

        function eliminarFeriadoVariable(id) {
            $.ajax({
                type: 'POST',
                url: '@Url.Action("EliminarFeriadoVariable", "Feriados")',
                data: {
                    id: id,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    if (response.success) {
                        mostrarNotificacion(response.message, 'success');
                        setTimeout(function() {
                            location.reload();
                        }, 1500);
                    } else {
                        mostrarNotificacion(response.message || 'Error al eliminar', 'error');
                    }
                },
                error: function () {
                    mostrarNotificación('Error de conexión con el servidor', 'error');
                }
            });
        }

        // Sistema de notificaciones mejorado
        function mostrarNotificacion(mensaje, tipo) {
            // Remover notificaciones existentes
            $('.notification-toast').remove();

            var iconClass = tipo === 'success' ? 'fas fa-check-circle' : 'fas fa-exclamation-triangle';
            var bgClass = tipo === 'success' ? 'bg-success' : 'bg-danger';

            var toast = $(`
                <div class="notification-toast position-fixed top-0 end-0 m-3" style="z-index: 9999;">
                    <div class="toast show ${bgClass} text-white" role="alert">
                        <div class="toast-body d-flex align-items-center">
                            <i class="${iconClass} me-2"></i>
                            <span>${mensaje}</span>
                            <button type="button" class="btn-close btn-close-white ms-auto" data-bs-dismiss="toast"></button>
                        </div>
                    </div>
                </div>
            `);

            $('body').append(toast);

            // Auto-remover después de 4 segundos
            setTimeout(function() {
                toast.fadeOut(function() {
                    toast.remove();
                });
            }, 4000);
        }

        // Validación en tiempo real para días del mes
        $('#Mes, #Dia').on('change', function() {
            var mes = parseInt($('#Mes').val());
            var dia = parseInt($('#Dia').val());

            if (mes && dia) {
                var diasPorMes = [31, 29, 31, 30, 31, 30, 31, 31, 30, 31, 30, 31];
                var maxDias = diasPorMes[mes - 1];

                if (dia > maxDias) {
                    $('#Dia').addClass('is-invalid');
                    $('#Dia-error').text(`El mes seleccionado solo tiene ${maxDias} días`);
                } else {
                    $('#Dia').removeClass('is-invalid');
                    $('#Dia-error').text('');
                }
            }
        });

        // Prevenir que los modales se abran automáticamente
        $(document).ready(function() {
            // Cerrar cualquier modal que pueda estar abierto
            $('.modal').modal('hide');

            // Remover clases que podrían hacer que el modal aparezca
            $('.modal').removeClass('show');
            $('body').removeClass('modal-open');
