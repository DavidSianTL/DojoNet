@model ProyectoDojoGeko.Models.RolesViewModel

@{
    ViewData["Title"] = "Crear Rol";
}

<h2 class="mb-4">Crear nuevo rol</h2>

<form asp-action="Crear" asp-controller="Roles" method="post">
    <div class="form-group mb-3">
        <label asp-for="NombreRol" class="form-label"></label>
        <input asp-for="NombreRol" class="form-control" />
        <span asp-validation-for="NombreRol" class="text-danger"></span>
    </div>

    <div class="form-group form-check mb-4">
        <input asp-for="Estado" class="form-check-input" />
        <label asp-for="Estado" class="form-check-label">Activo</label>
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
