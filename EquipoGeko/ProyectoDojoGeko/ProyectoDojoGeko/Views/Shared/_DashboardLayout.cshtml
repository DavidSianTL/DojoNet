<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/dashboard.css" />
    
    <!-- Renderizar estilos adicionales -->
    @RenderSection("Styles", required: false)
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            overflow-x: hidden;
        }

        /* Colores base para cada seccion */
        :root {
            --dashboard-color: #6B1FFF;
            --empresas-color: #4F8EFF;
            --sistemas-color: #7DD3FC;
            --departamentos-color: #E8CE26;
            --empleados-color: #FF6B6B;
            --usuarios-color: #FFD166;
            --roles-color: #06D6A0;
            --bitacora-color: #118AB2;
            --configuracion-color: #073B4C;
        }

        .app-container {
            display: flex;
            min-height: 100vh;
            width: 100%;
        }

        .sidebar {
            width: 280px;
            min-width: 280px;
            background: #ffffff;
            border-right: 1px solid #e9ecef;
            display: flex;
            flex-direction: column;
            position: fixed;
            height: 100vh;
            left: 0;
            top: 0;
            z-index: 1000;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.1);
        }

        .submenu {
            display: none;
            list-style: none;
            padding-left: 1.5rem; /* un poco más para diferenciar */
            margin-top: 0.25rem;
            border-left: 3px solid var(--roles-color);
        }

        .submenu-item {
            margin: 0.4rem 0;
        }

        .submenu-link {
            display: block;
            color: #6c757d; /* gris medio, similar al color base de nav-link */
            font-size: 0.9rem;
            text-decoration: none;
            padding: 0.35rem 0.75rem;
            border-radius: 6px;
            transition: background-color 0.3s ease, color 0.3s ease;
        }

            .submenu-link:hover {
                background-color: rgba(108, 117, 125, 0.15); /* gris claro para hover */
                color: #495057; /* gris oscuro para texto hover */
                text-decoration: none;
            }

        .roles-active > .submenu {
            display: block;
        }

            float: right;
            transition: transform 0.3s ease;
            font-size: 0.75rem;
            color: var(--roles-color);
        }

        .roles-active > .nav-link .submenu-arrow {
            transform: rotate(180deg);
        }

        /* Para que los ítems activos del submenu se vean resaltados, si quieres */
        .submenu-item.active > .submenu-link {
            background-color: rgba(6, 214, 160, 0.25);
            font-weight: 600;
            color: var(--roles-color);
        }



        .sidebar-header {
            padding: 1.5rem;
            border-bottom: 1px solid #e9ecef;
            text-align: center;
        }

        .logo-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .sidebar-nav {
            flex: 1;
            padding: 1rem 0;
            overflow-y: auto;
        }

        .nav-list {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .nav-item {
            margin: 0.25rem 1rem;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 0.875rem 1rem;
            color: #6c757d;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-weight: 500;
            border-left: 4px solid transparent;
        }

        .nav-link:hover {
            background-color: rgba(0, 0, 0, 0.05);
            transform: translateX(4px);
            text-decoration: none;
            color: #495057;
        }

        .nav-link i {
            width: 20px;
            margin-right: 0.75rem;
            font-size: 1.1rem;
        }

        /* Estilos especificos para cada seccion cuando esta activa */
        .nav-item.dashboard-active .nav-link {
            background: linear-gradient(to right, rgba(107, 31, 255, 0.1), transparent);
            border-left: 4px solid var(--dashboard-color);
            color: var(--dashboard-color);
            font-weight: bold;
        }

        .nav-item.empresas-active .nav-link {
            background: linear-gradient(to right, rgba(79, 142, 255, 0.1), transparent);
            border-left: 4px solid var(--empresas-color);
            color: var(--empresas-color);
            font-weight: bold;
        }

        .nav-item.sistemas-active .nav-link {
            background: linear-gradient(to right, rgba(125, 211, 252, 0.1), transparent);
            border-left: 4px solid var(--sistemas-color);
            color: var(--sistemas-color);
            font-weight: bold;
        }

        .nav-item.departamentos-active .nav-link {
            background: linear-gradient(to right, rgba(246, 222, 70, 0.1), transparent);
            border-left: 4px solid var(--departamentos-color);
            color: var(--departamentos-color);
            font-weight: bold;
        }

        .nav-item.empleados-active .nav-link {
            background: linear-gradient(to right, rgba(255, 107, 107, 0.1), transparent);
            border-left: 4px solid var(--empleados-color);
            color: var(--empleados-color);
            font-weight: bold;
        }

        .nav-item.usuarios-active .nav-link {
            background: linear-gradient(to right, rgba(255, 209, 102, 0.1), transparent);
            border-left: 4px solid var(--usuarios-color);
            color: var(--usuarios-color);
            font-weight: bold;
        }

        .nav-item.roles-active .nav-link {
            background: linear-gradient(to right, rgba(6, 214, 160, 0.1), transparent);
            border-left: 4px solid var(--roles-color);
            color: var(--roles-color);
            font-weight: bold;
        }

        .nav-item.bitacora-active .nav-link {
            background: linear-gradient(to right, rgba(17, 138, 178, 0.1), transparent);
            border-left: 4px solid var(--bitacora-color);
            color: var(--bitacora-color);
            font-weight: bold;
        }

        .nav-item.configuracion-active .nav-link {
            background: linear-gradient(to right, rgba(7, 59, 76, 0.1), transparent);
            border-left: 4px solid var(--configuracion-color);
            color: var(--configuracion-color);
            font-weight: bold;
        }

        .sidebar-footer {
            padding: 1.5rem;
            border-top: 1px solid #e9ecef;
            margin-top: auto;
        }

        .user-info {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            overflow: hidden;
            margin-right: 0.75rem;
        }

        .user-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .user-details {
            flex: 1;
        }

        .user-name {
            font-weight: 600;
            color: #495057;
            font-size: 0.875rem;
        }

        .user-role {
            color: #6c757d;
            font-size: 0.75rem;
        }

        .sidebar-actions {
            display: flex;
            gap: 0.5rem;
        }

        .sidebar-action {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 36px;
            height: 36px;
            border-radius: 6px;
            color: #6c757d;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .sidebar-action:hover {
            background-color: #e9ecef;
            color: #495057;
            text-decoration: none;
        }

        /* Contenido principal */
        .main-content {
            margin-left: 280px;
            width: calc(100% - 280px);
            min-height: 100vh;
            background: #ffffff;
            display: flex;
            flex-direction: column;
        }

        /* Asegurar que el contenido se vea correctamente */
        .main-content > * {
            width: 100%;
            flex: 1;
        }
    </style>
</head>
<body>
    @{
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString()?.ToLower();
    }

    <div class="app-container">
        <!-- Barra Lateral -->
        <aside class="sidebar">
            <div class="sidebar-header">
                <div class="logo-container">
                    <img src="~/imagenes/images.webp" alt="GEKO Security Systems Logo" width="120" height="40" class="h-auto" />
                    <div class="logo-text">
                    </div>
                </div>
            </div>

            <nav class="sidebar-nav">
                <ul class="nav-list">
                    <li class="nav-item @(currentController == "dashboard" ? "dashboard-active" : "")">
                        <a href="@Url.Action("Dashboard", "Dashboard")" class="nav-link">
                            <i class="fas fa-tachometer-alt"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>

                    <li class="nav-item @(currentController == "empresas" ? "empresas-active" : "")">
                        <a href="@Url.Action("Index", "Empresas")" class="nav-link">
                            <i class="fas fa-building"></i>
                            <span>Empresas</span>
                        </a>
                    </li>

                    <li class="nav-item @(currentController == "sistemas" ? "sistemas-active" : "")">
                        <a href="@Url.Action("Index", "Sistemas")" class="nav-link">
                            <i class="fas fa-server"></i>
                            <span>Sistemas</span>
                        </a>
                    </li>

                    <li class="nav-item @(currentController == "departamentos" ? "departamentos-active" : "")">
                        <a href="@Url.Action("Index", "Departamentos")" class="nav-link">
                            <i class="fas fa-house"></i>
                            <span>Departamentos</span>
                        </a>
                    </li>
                    
                    <li class="nav-item @(currentController == "empleados" ? "empleados-active" : "")">
                        <a href="@Url.Action("Index", "Empleados")" class="nav-link">
                            <i class="fas fa-user-tie"></i>
                            <span>Empleados</span>
                        </a>
                    </li>

                    <li class="nav-item @(currentController == "usuarios" ? "usuarios-active" : "")">
                        <a href="@Url.Action("Index", "Usuarios")" class="nav-link">
                            <i class="fas fa-users"></i>
                            <span>Usuarios</span>
                        </a>
                    </li>
                    <li class="nav-item @(currentController == "roles" || currentController == "permisos" || currentController == "asignar-permisos" ? "roles-active" : "")">
                        <a href="javascript:void(0)" class="nav-link submenu-toggle">
                            <i class="fas fa-shield-alt"></i>
                            <span>Roles y Permisos</span>
                            <i class="fas fa-chevron-down submenu-arrow"></i>
                        </a>
                        <ul class="submenu">
                            <li class="submenu-item @(currentController == "roles" ? "active" : "")">
                                <a href="@Url.Action("Index", "Roles")" class="submenu-link">Roles</a>
                            </li>
                            <li class="submenu-item @(currentController == "permisos" ? "active" : "")">
                                <a href="@Url.Action("Index", "Permisos")" class="submenu-link">Permisos</a>
                            </li>
                            <li class="submenu-item @(currentController == "asignar-permisos" ? "active" : "")">
                                <a href="@Url.Action("Index", "AsignarPermisos")" class="submenu-link">Asignar Permisos</a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item @(currentController == "bitacora" ? "bitacora-active" : "")">
                        <a href="@Url.Action("Index", "Bitacora")" class="nav-link">
                            <i class="fas fa-clipboard-list"></i>
                            <span>Bitacora</span>
                        </a>
                    </li>

                    <li class="nav-item @(currentController == "configuracion" ? "configuracion-active" : "")">
                        <a href="@Url.Action("Index", "Configuracion")" class="nav-link">
                            <i class="fas fa-cog"></i>
                            <span>Configuracion</span>
                        </a>
                    </li>
                </ul>
            </nav>

            <div class="sidebar-footer">
                <div class="user-info">
                    <div class="user-avatar">
                        <img src="" alt="Usuario" />
                    </div>
                    <div class="user-details">
                        <div class="user-name">@(ViewBag.Usuario ?? "Administrador")</div>
                        <div class="user-role">Administrador</div>
                    </div>
                </div>
                <div class="sidebar-actions">
                    <a href="@Url.Action("CambioContrasena", "Login")" class="sidebar-action" title="Cambiar Contraseña">
                        <i class="fas fa-key"></i>
                    </a>
                    <a href="@Url.Action("Logout", "Login")" class="sidebar-action" title="Cerrar Sesion">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>
                </div>
            </div>
        </aside>

        <!-- Contenido Principal -->
        <main class="main-content">
            @RenderBody()
        </main>
    </div>

    <!-- JavaScript base -->
    <script src="~/js/dashboard.js"></script>
    <script src="~/js/sidebar.js"></script>
    
    <!-- Renderizar scripts adicionales -->
    @RenderSection("Scripts", required: false)
</body>
</html>