@model ProyectoDojoGeko.Models.EmpresaViewModel
@{
    ViewData["Title"] = "Crear Nueva Empresa - GEKO Sistema de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/empresa-form.css" />
}

<div class="empresa-form-container">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-building"></i>
                Registrar Empresa
            </h1>
            <p class="page-subtitle">
                Ingresa los datos de la nueva empresa
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index")" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                <span>Volver a la Lista</span>
            </a>
        </div>
    </div>

    <!-- Formulario principal -->
    <div class="form-card">
        <form asp-action="Crear" method="post" id="empresaForm" novalidate>
            <!-- Información Básica de la Empresa -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Información de la Empresa
                    </h2>
                    <p class="section-subtitle">Datos básicos de la empresa</p>
                </div>

                <div class="form-grid">
                    <!-- Nombre -->
                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label">
                            <div class="label-icon"><i class="fas fa-tag"></i></div>
                            <span>Nombre</span><span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Nombre"
                                   class="form-control"
                                   placeholder="Ingrese el nombre de la empresa"
                                   maxlength="100"
                                   minlength="3"
                                   pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñ0-9\s\.\-&]+$"
                                   title="Solo letras, números, espacios, guiones o puntos."
                                   required />
                            <span asp-validation-for="Nombre" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Código -->
                    <div class="form-group">
                        <label asp-for="Codigo" class="form-label">
                            <div class="label-icon"><i class="fas fa-barcode"></i></div>
                            <span>Código</span><span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Codigo"
                                   class="form-control"
                                   placeholder="Ingrese el código de la empresa"
                                   maxlength="50"
                                   minlength="3"
                                   pattern="^[A-Za-z0-9\-]+$"
                                   title="Solo letras, números o guiones."
                                   required />
                            <span asp-validation-for="Codigo" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Descripción -->
                    <div class="form-group" style="grid-column: span 2;">
                        <label asp-for="Descripcion" class="form-label">
                            <div class="label-icon"><i class="fas fa-align-left"></i></div>
                            <span>Descripción</span>
                        </label>
                        <div class="input-container">
                            <textarea asp-for="Descripcion"
                                      class="form-control"
                                      placeholder="Ingrese una descripción de la empresa"
                                      maxlength="255"
                                      pattern="^[A-Za-zÁÉÍÓÚáéíóúÑñ0-9\s\.,;:()\-]*$"
                                      title="Solo letras, números y puntuación básica."
                                      rows="3"></textarea>
                            <span asp-validation-for="Descripcion" class="validation-message"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Configuración de la Empresa -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title"><i class="fas fa-cog"></i> Configuración</h2>
                    <p class="section-subtitle">Estado y parámetros de la empresa</p>
                </div>

                <div class="form-grid">
                    <!-- Estado -->
                    <div class="form-group">
                        <label asp-for="Estado" class="form-label">
                            <div class="label-icon"><i class="fas fa-toggle-on"></i></div>
                            <span>Estado</span>
                        </label>
                        <div class="input-container">
                            <div class="toggle-container">
                                <input asp-for="Estado" type="checkbox" class="toggle-input" id="estadoToggle" checked />
                                <label for="estadoToggle" class="toggle-label">
                                    <span class="toggle-slider"></span>
                                    <span class="toggle-text">Activo</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Acciones -->
            <div class="form-actions">
                <div class="actions-container">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("Index")'">
                        <i class="fas fa-times"></i> <span>Cancelar</span>
                    </button>

                    <button type="reset" class="btn-reset" id="resetBtn">
                        <i class="fas fa-undo"></i> <span>Limpiar</span>
                    </button>

                    <button type="submit" class="btn-submit" id="submitBtn">
                        <i class="fas fa-save"></i> <span>Guardar Empresa</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    <script>
        // Cambiar texto del toggle
        document.getElementById('estadoToggle').addEventListener('change', function () {
            const toggleText = this.nextElementSibling.querySelector('.toggle-text');
            toggleText.textContent = this.checked ? 'Activo' : 'Inactivo';
        });

        // Validación con jQuery Validate
        $(function () {
            $("#empresaForm").validate({
                onkeyup: true,
                onfocusout: true,
                errorClass: "validation-message",
                validClass: "valid-message"
            });
        });

        // Prevenir doble envío
        document.getElementById("submitBtn").addEventListener("click", function () {
            this.disabled = true;
            this.form.submit();
        });

        // Limpiar mensajes al resetear
        document.getElementById("resetBtn").addEventListener("click", function () {
            document.querySelectorAll(".validation-message").forEach(el => el.textContent = "");
        });
    </script>
}
