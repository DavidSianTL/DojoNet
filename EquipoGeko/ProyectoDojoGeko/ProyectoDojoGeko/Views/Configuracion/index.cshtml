@{
    ViewBag.Title = "Configuración de Usuario";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<style>
    body, html {
        margin: 0;
        padding: 0;
        background: #f4f6fa;
        min-height: 100vh;
    }
    .config-body {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #f4f6fa;
    }
    .config-container {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 6px 24px 0 rgba(60, 72, 88, 0.13);
        padding: 2.5rem 2rem;
        max-width: 420px;
        width: 100%;
        color: #333;
        text-align: center;
        position: relative;
        border: 1px solid #ececec;
        min-height: 520px;
    }
    .config-title {
        font-size: 2rem;
        font-weight: bold;
        margin-bottom: 1.5rem;
        letter-spacing: 1px;
        color: #2d3a4b;
    }
    .config-options {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        margin-top: 2rem;
    }
    .config-option {
        background: #f7f9fb;
        border-radius: 12px;
        padding: 1.2rem 1rem;
        display: flex;
        align-items: center;
        gap: 1.2rem;
        transition: background 0.2s, color 0.2s;
        cursor: pointer;
        color: #2d3a4b;
        text-decoration: none;
        font-size: 1.1rem;
        border: 1px solid #e5e9f2;
    }
    .config-option:hover {
        background: #eaf0fa;
        color: #1a2240;
        text-decoration: none;
    }
    .config-option-icon {
        font-size: 2.3rem;
        color: #f6c700;
        margin-right: 0.6rem;
    }
    .config-future {
        margin-top: 2.5rem;
        font-size: 0.95rem;
        color: #7b8190;
        opacity: 0.85;
    }
    /* Foto de perfil */
    .foto-preview {
        width: 120px;
        height: 120px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: 0 2px 10px rgba(60,72,88,0.10);
        margin-bottom: 1.3rem;
        border: 3px solid #e5e9f2;
    }
    .foto-form label {
        font-weight: 500;
        color: #2d3a4b;
        display: block;
        margin-bottom: 0.7rem;
    }
    .foto-form input[type="file"] {
        margin-bottom: 1.3rem;
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    .spa-btn {
        background: #f6c700;
        color: #2d3a4b;
        border: none;
        border-radius: 8px;
        padding: 0.6rem 1.4rem;
        font-size: 1rem;
        font-weight: 600;
        margin: 0.5rem 0.4rem;
        cursor: pointer;
        transition: background 0.2s;
        box-shadow: 0 2px 8px rgba(60,72,88,0.05);
    }
    .spa-btn:hover {
        background: #ffe066;
    }
    .spa-btn.secondary {
        background: #e5e9f2;
        color: #2d3a4b;
    }
    .spa-btn.secondary:hover {
        background: #d2d7e6;
    }
</style>

<div class="config-body">
    <div class="config-container">
        <!-- Menú de opciones (visible por defecto) -->
        <div id="spaMenu">
            <div class="config-title">Configuración de tu cuenta</div>
            <div class="config-options">
                <button class="config-option" onclick="showFotoForm()">
                    <span class="config-option-icon">
                        <i class="fas fa-user-circle"></i>
                    </span>
                    Cambiar foto de perfil
                </button>
                <a href="#" class="config-option" style="opacity:0.5;pointer-events:none;">
                    <span class="config-option-icon">
                        <i class="fas fa-lock"></i>
                    </span>
                    Cambiar contraseña (próximamente)
                </a>
                <a href="#" class="config-option" style="opacity:0.5;pointer-events:none;">
                    <span class="config-option-icon">
                        <i class="fas fa-user-edit"></i>
                    </span>
                    Editar información personal (próximamente)
                </a>
            </div>
            <div class="config-future">
                Más opciones estarán disponibles próximamente.<br />
                ¡Personaliza tu experiencia!
            </div>
        </div>
        <!-- Formulario de cambio de foto (oculto por defecto) -->
        <div id="spaFoto" style="display:none;">
            <div class="config-title" style="margin-bottom:1.1rem;">Cambiar foto de perfil</div>
            <img class="foto-preview" src="https://randomuser.me/api/portraits/men/75.jpg" alt="Foto actual" />
            <form class="foto-form" enctype="multipart/form-data" asp-action="CambiarFoto" asp-controller="Configuracion" method="post">

                <input type="hidden" name="IdEmpleado" value="@Model.IdEmpleado" />
                <label for="FotoPerfil">Selecciona una nueva foto</label>
                <input type="file" id="FotoPerfil" name="FotoPerfil" accept="image/*" required />
                <div>
                    <button type="submit" class="spa-btn">Guardar foto</button>
                    <button type="button" class="spa-btn secondary" onclick="volverMenu()">Regresar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- FontAwesome para iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

@section Scripts{
    <script>
        function showFotoForm() {
            document.getElementById('spaMenu').style.display = 'none';
            document.getElementById('spaFoto').style.display = 'block';
        }
        function volverMenu() {
            document.getElementById('spaFoto').style.display = 'none';
            document.getElementById('spaMenu').style.display = 'block';
        }
    </script>
}

            