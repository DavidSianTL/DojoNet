@model ProyectoDojoGeko.Models.Usuario.UsuarioViewModel
@{
    ViewData["Title"] = (Model.IdUsuario == 0 ? "Crear" : "Editar") + " Usuario - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    bool isEdit = Model.IdUsuario > 0;
}

<!-- CSS específico para el formulario de usuarios -->
<link rel="stylesheet" href="~/css/usuario-form.css" />

<div class="empleado-form-container">
    <!-- Header de la página -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-@(isEdit ? "edit" : "user-plus")"></i>
                @(isEdit ? "Editar" : "Crear") Usuario
            </h1>
            <p class="page-subtitle">
                @(isEdit ? "Modifica la información del usuario seleccionado" : "Ingresa los datos del nuevo usuario")
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Usuarios")" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                <span>Volver a la Lista</span>
            </a>
        </div>
    </div>

    <!-- Formulario principal -->
    <div class="form-card">
        <form asp-action="@(isEdit ? "Editar" : "Crear")" method="post" id="usuariooForm" novalidate>
            @if (isEdit)
            {
                <input asp-for="IdUsuario" type="hidden" />
            }

            <!-- Información del Usuario -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-user"></i>
                        Información Personal
                    </h2>
                    <p class="section-subtitle">Datos básicos del usuario</p>
                </div>

                <div class="form-grid">
                    <!-- Username -->
                    <div class="form-group">
                        <label asp-for="Username" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-id-card"></i>
                            </div>
                            <span>Usuario</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Username" class="form-control" placeholder="Ingrese el nombre de Usuario" maxlength="15" />
                            <span asp-validation-for="Username" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Asociar Empleado -->
                    <div class="form-group">
                        <label asp-for="FK_IdEmpleado" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <span>Nombre</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="FK_IdEmpleado" class="form-control" placeholder="Ingrese el nombre" maxlength="50" />
                            <span asp-validation-for="FK_IdEmpleado" class="validation-message"></span>
                        </div>
                    </div>

                </div>
            </div>


            <!-- Botones de acción -->
            <div class="form-actions">
                <div class="actions-container">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("Index", "Empleados")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>

                    <button type="reset" class="btn-reset" id="resetBtn">
                        <i class="fas fa-undo"></i>
                        <span>Limpiar</span>
                    </button>

                    <button type="submit" class="btn-submit" id="submitBtn">
                        <i class="fas fa-@(isEdit ? "save" : "plus")"></i>
                        <span>@(isEdit ? "Actualizar" : "Crear") Empleado</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de confirmación -->
<div class="modal-overlay" id="confirmModal">
    <div class="modal-container">
        <div class="modal-header">
            <h3>Confirmar Acción</h3>
            <button class="modal-close" id="closeModal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="modal-icon success">
                <i class="fas fa-question-circle"></i>
            </div>
            <p id="modalMessage">¿Está seguro que desea guardar los cambios?</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" id="cancelAction">
                <i class="fas fa-times"></i>
                Cancelar
            </button>
            <button class="btn-confirm" id="confirmAction">
                <i class="fas fa-check"></i>
                Confirmar
            </button>
        </div>
    </div>
</div>

<!-- Scripts de validación -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/empleado-form.js"></script>
}
