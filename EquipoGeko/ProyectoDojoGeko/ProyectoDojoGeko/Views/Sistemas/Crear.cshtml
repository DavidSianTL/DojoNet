@model ProyectoDojoGeko.Models.SistemaViewModel
@{
    ViewData["Title"] = "Agregar Sistemas - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<link rel="stylesheet" href="~/css/empleado-form.css" />
<link rel="stylesheet" href="~/css/sistemas.css" />

<div class="sistemas-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-server"></i>
                Gesti贸n de Sistemas
            </h1>
            <p class="page-subtitle">
                Agregar un nuevo sistema
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Sistemas")" class="btn-create-empty">
                <span>Regresar</span>
            </a>
        </div>
    </div>

    <div class="form-card">
        <form asp-action="Crear" asp-controller="Sistemas" method="post">
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-server"></i>
                        Datos del nuevo sistema
                    </h2>
                </div>

                <div class="form-grid">
                    <!-- Nombre del sistema -->
                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-database"></i>
                            </div>
                            <span>Nombre</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del sistema" maxlength="100" />
                        </div>
                    </div>

                    <!-- C贸digo -->
                    <div class="form-group">
                        <label asp-for="Codigo" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-hashtag"></i>
                            </div>
                            <span>Codigo</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Codigo" class="form-control" placeholder="Ingresa el c贸digo del sistema" maxlength="50" />
                        </div>
                    </div>

                    <!-- Descripci贸n -->
                    <div class="form-group">
                        <label asp-for="Descripcion" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-file-invoice"></i>
                            </div>
                            <span>Descripcion</span>
                        </label>
                        <div class="input-container">
                            <textarea asp-for="Descripcion" class="form-control" placeholder="Descripcion breve del sistema..." maxlength="255"></textarea>
                        </div>
                    </div>


                    <!-- Estado -->
                    <div class="form-group">
                        <label asp-for="Estado" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-toggle-on"></i>
                            </div>
                            <span>Estado</span>
                        </label>
                        <div class="input-container">
                            <div class="toggle-container">
                                <input asp-for="Estado" type="checkbox" class="toggle-input" />
                                <label for="estadoToggle" class="toggle-label">
                                    <span class="toggle-slider"></span>
                                    <span class="toggle-text">Activo</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <div class="actions-container">
                    <button type="submit" class="btn-submit">
                        <i class="fas fa-save"></i>
                        <span>Guardar Sistema</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

