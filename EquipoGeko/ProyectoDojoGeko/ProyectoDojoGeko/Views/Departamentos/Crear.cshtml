@model ProyectoDojoGeko.Models.DepartamentoViewModel
@{
    ViewData["Title"] = "Agregar Departamentos - GEKO Sistema de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayoutSistema.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/departamento-form.css" />
}

<div class="departamento-form-container">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-house"></i>
                Registrar Departamento
            </h1>
            <p class="page-subtitle">
                Ingresa los datos del nuevo departamento
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Departamentos")" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                <span>Volver a la Lista</span>
            </a>
        </div>
    </div>

    <!-- Formulario principal -->
    <div class="form-card">
        <form asp-action="Crear" asp-controller="Departamentos" method="post" id="departamentoForm" novalidate>
            <!-- Información Básica del Departamento-->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Información del Departamento
                    </h2>
                    <p class="section-subtitle">Datos básicos del departamento</p>
                </div>

                <div class="form-grid">
                    <!-- Nombre -->
                    <div class="form-group">
                        <label asp-for="Nombre" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-tag"></i>
                            </div>
                            <span>Nombre</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del departamento" maxlength="100" required />
                            <span asp-validation-for="Nombre" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Código -->
                    <div class="form-group">
                        <label asp-for="Codigo" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-barcode"></i>
                            </div>
                            <span>Código</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Codigo" class="form-control" placeholder="Ingrese el código del departamento" maxlength="50" required />
                            <span asp-validation-for="Codigo" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Descripción -->
                    <div class="form-group" style="grid-column: span 2;">
                        <label asp-for="Descripcion" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-align-left"></i>
                            </div>
                            <span>Descripción</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <textarea asp-for="Descripcion" class="form-control" placeholder="Ingrese una descripción del departamento" rows="3" required></textarea>
                            <span asp-validation-for="Descripcion" class="validation-message"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <div class="actions-container">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("Index", "Departamentos")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>

                    <button type="reset" class="btn-reset" id="resetBtn">
                        <i class="fas fa-undo"></i>
                        <span>Limpiar</span>
                    </button>

                    <button type="submit" class="btn-submit" id="submitBtn">
                        <i class="fas fa-save"></i>
                        <span>Guardar Departamento</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
    </script>
}