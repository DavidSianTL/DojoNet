@model ProyectoDojoGeko.Models.DepartamentoViewModel
@{
    ViewData["Title"] = "Agregar Departamentos - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/departamento.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/vCrear.css" asp-append-version="true" />
}

<div class="depto-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-building"></i>
                Gestión de Departamentos
            </h1>
            <p class="page-subtitle">
                Agregar un nuevo departamento
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Departamentos")" class="btn-create-empty">
                <span>Regresar</span>
            </a>
        </div>
    </div>
</div>
<div class="depto-container">
    <div class="formbold-main-wrapper">
        <div class="formbold-form-wrapper">

            <img src="~/imagenes/imagen_depto.jpg" class="imagen">

            <form asp-action="Crear" asp-controller="Departamentos" method="post">
                <div class="formbold-form-title">
                    <h2 class="">Datos del departamento</h2>
                    <p>
                        Ingrese la información que se solicita para poder agregar un nuevo departamento en el sistema.
                    </p>
                </div>

                <div class="formbold-input-flex">
                    <div>
                        <label asp-for="Nombre" class="formbold-form-label">
                                Nombre del departamento
                        </label>
                        <input type="text"
                               name="Nombre"
                               id="Nombre"
                               class="formbold-form-input" />
                    </div>
                    <div>
                        <label asp-for="Codigo" class="formbold-form-label"> Codigo de departamento </label>
                        <input type="text"
                               name="Codigo"
                               id="Codigo"
                               class="formbold-form-input" />
                    </div>
                </div>
                <div>
                    <label asp-for="Descripcion" class="formbold-form-label">Descripcion</label>
                    <textarea type="text"
                              name="Descripcion"
                              id="Descripcion"
                              class="formbold-form-input"></textarea>
                </div>
                <div>
                    <label asp-for="Estado" class="formbold-form-label">Estado</label>
                    <select type="text"
                              name="Estado"
                              id="Estado"
                              class="formbold-form-input">
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                    </select>
                </div>
                <button type="submit" class="btn-create-d">
                    <i class="fas fa-save"></i> Guardar Departamento
                </button>
            </form>
        </div>
    </div>
</div>