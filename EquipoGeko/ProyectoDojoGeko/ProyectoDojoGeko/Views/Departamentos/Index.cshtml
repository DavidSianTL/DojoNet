@model IEnumerable<ProyectoDojoGeko.Models.DepartamentoViewModel>
@{
    ViewData["Title"] = "Gestión de Departamentos - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<!-- CSS específico para departamentos -->
<link rel="stylesheet" href="~/css/departamento.css" />

<div class="depto-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-house"></i>
                Gestión de Departamentos
            </h1>
            <p class="page-subtitle">
                Administra toda la información de los departamentos registrados 
            </p>
        </div>
        <div class="header-actions">
            <div class="search-container">
                <i class="fas fa-search"></i>
                <input type="text" id="searchInput" placeholder="Buscar departamentos..." class="search-input">
            </div>
            <a href="@Url.Action("Crear", "Departamentos")" class="btn-create-empty">
                <i class="fas fa-plus"></i>
                <span>Nuevo Departamento</span>
            </a>
        </div>
    </div>

    <!-- Estadísticas -->
    <div class="filters-stats">
        <div class="stats-cards">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-house"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.Count()</div>
                    <div class="stat-label">Total Departamentos</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon active">
                    <i class="fas fa-toggle-on"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.Count(e => e.Estado)</div>
                    <div class="stat-label">Departamentos Activos</div>
                </div>
            </div>
            <div class="stat-card">
                <div class="stat-icon inactive">
                    <i class="fas fa-toggle-off"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.Count(e => !e.Estado)</div>
                    <div class="stat-label">Departamentos Inactivos</div>
                </div>
            </div>
        </div>

        <!-- Filtros -->
        <div class="filters">
            <div class="filter-group">
                <label for="estadoFilter">Estado:</label>
                <select id="estadoFilter" class="filter-select">
                    <option value="todos">Todos</option>
                    <option value="activos">Activos</option>
                    <option value="inactivos">Inactivos</option>
                </select>
            </div>
            <button id="resetFilters" class="btn-reset-filters">
                <i class="fas fa-sync-alt"></i>
                Reiniciar Filtros
            </button>
        </div>
    </div>

    <!-- Tabla -->
    <div class="table-container">
        <table class="depto-table" id="departamentosTable">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Código</th>
                    <th>Fecha de Creación</th>
                    <th>Estado</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var departamento in Model)
                    {
                        <tr class="@(departamento.Estado ? "" : "inactive-row")" data-estado="@(departamento.Estado ? "activo" : "inactivo")">
                            <td>@departamento.IdDepartamento</td>
                            <td>@departamento.Nombre</td>
                            <td>@departamento.Descripcion</td>
                            <td>@departamento.Codigo</td>
                            <td>@departamento.FechaCreacion.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="estado-badge @(departamento.Estado ? "activo" : "inactivo")">
                                    @(departamento.Estado ? "Activo" : "Inactivo")
                                </span>
                            </td>
                            <td class="actions-cell">
                                <div class="actions-container">
                                    <a href="@Url.Action("Editar", "Departamentos", new { id = departamento.IdDepartamento })" class="btn-action edit" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <button type="button"
                                            class="btn-action delete"
                                            data-id="@departamento.IdDepartamento"
                                            data-nombre="@departamento.Nombre"
                                            title="Eliminar">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="7" class="no-data">
                            <div class="no-data-message">
                                <i class="fas fa-building-slash"></i>
                                <p>No hay departamentos registrados en el departamentos</p>
                                <a href="@Url.Action("Crear", "Departamentos")" class="btn-create-empty">
                                    <i class="fas fa-plus"></i>
                                    Agregar Departamento
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginación -->
    <div class="pagination-container">
        <div class="pagination-info">
            Mostrando <span id="showing-start">1</span> a <span id="showing-end">@Model.Count()</span> de <span id="total-items">@Model.Count()</span> departamentos
        </div>
        <div class="pagination-controls">
            <button id="prev-page" class="pagination-btn" disabled>
                <i class="fas fa-chevron-left"></i>
                Anterior
            </button>
            <div class="pagination-pages" id="pagination-pages">
                <button class="page-btn active">1</button>
            </div>
            <button id="next-page" class="pagination-btn" disabled>
                Siguiente
                <i class="fas fa-chevron-right"></i>
            </button>
        </div>
    </div>
</div>

<!-- Modal Eliminar Departamentos -->
<div id="modalEliminarDepto" class="modal-custom">
    <div class="modal-content-custom">
        <button id="cerrarModal" class="modal-close-custom" title="Cerrar">&times;</button>
        <h3>Desactivar Departamento</h3>
        <p>¿Estás seguro que deseas desactivar el departamento <strong id="nombreDeptoEliminar"></strong>?</p>
        <form id="formEliminarDepto" method="post">
            <button type="button" id="cancelarEliminar" class="btn btn-secondary">Cancelar</button>
            <button type="submit" class="btn btn-danger">Sí, desactivar</button>
        </form>
    </div>
</div>

<!-- Script JS -->
<script src="~/js/departamentos.js"></script>
<script>

      document.addEventListener('DOMContentLoaded', function () {
        const estadoFilter = document.getElementById('estadoFilter');
        const resetBtn = document.getElementById('resetFilters');
        const searchInput = document.getElementById('searchInput');
        const tableRows = document.querySelectorAll('#departamentosTable tbody tr');

        // Función para aplicar filtros combinados (estado + búsqueda)
        function filtrarDepartamentos() {
            const filtroEstado = estadoFilter.value;
            const textoBusqueda = searchInput.value.toLowerCase();

            tableRows.forEach(row => {
                const estado = row.getAttribute('data-estado'); // activo o inactivo
                const contenido = row.textContent.toLowerCase();

                const coincideEstado =
                    filtroEstado === 'todos' ||
                    (filtroEstado === 'activos' && estado === 'activo') ||
                    (filtroEstado === 'inactivos' && estado === 'inactivo');

                const coincideBusqueda = contenido.includes(textoBusqueda);

                if (coincideEstado && coincideBusqueda) {
                    row.style.display = '';
                } else {
                    row.style.display = 'none';
                }
            });
        }

        // Filtro por estado
        estadoFilter.addEventListener('change', filtrarDepartamentos);

        // Filtro por texto
        searchInput.addEventListener('input', filtrarDepartamentos);

        // Botón para reiniciar filtros
        resetBtn.addEventListener('click', function () {
            estadoFilter.value = 'todos';
            searchInput.value = '';
            filtrarDepartamentos();
        });
    });
    // Abrir modal y llenar datos
    document.querySelectorAll('.btn-action.delete').forEach(button => {
      button.addEventListener('click', () => {
        const deptoId = button.getAttribute('data-id');
        const deptoNombre = button.getAttribute('data-nombre');
        document.getElementById('nombreDeptoEliminar').textContent = deptoNombre;
        document.getElementById('formEliminarDepto').action = `/Departamentos/Eliminar/${deptoId}`;
        document.getElementById('modalEliminarDepto').style.display = 'flex';
      });
    });

    // Cerrar modal
    document.getElementById('cerrarModal').addEventListener('click', () => {
      document.getElementById('modalEliminarDepto').style.display = 'none';
    });
    document.getElementById('cancelarEliminar').addEventListener('click', () => {
      document.getElementById('modalEliminarDepto').style.display = 'none';
    });

    // Cerrar modal al hacer click fuera del contenido
    window.addEventListener('click', (e) => {
      const modal = document.getElementById('modalEliminarDepto');
      if (e.target === modal) {
        modal.style.display = 'none';
      }
    });


        document.getElementById('searchInput').addEventListener('input', function () {
        const filter = this.value.toLowerCase();
        const rows = document.querySelectorAll('#departamentosTable tbody tr');

        rows.forEach(row => {
            const text = row.textContent.toLowerCase();
            if (text.includes(filter)) {
                row.style.display = '';
            } else {
                row.style.display = 'none';
            }
        });
    });
</script>