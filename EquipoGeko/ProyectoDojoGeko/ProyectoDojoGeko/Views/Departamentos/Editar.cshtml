@model ProyectoDojoGeko.Models.DepartamentoViewModel
@{
    ViewData["Title"] = "Agregar Departamentos - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/departamento.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/vCrear.css" asp-append-version="true" />
}

<div class="depto-container">
    <!-- Header -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-building"></i>
                Gestión de Departamentos
            </h1>
            <p class="page-subtitle">
                Agregar un nuevo departamento
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Departamentos")" class="btn-create-empty">
                <span>Regresar</span>
            </a>
        </div>
    </div>
</div>
<div class="depto-container">
    <div class="formbold-main-wrapper">
        <div class="formbold-form-wrapper">

            <img src="~/imagenes/imagen-editar-depto.jpg" class="imagen">

            <form asp-action="Editar" asp-controller="Departamentos" method="post">
                <input asp-for="IdDepartamento" type="hidden" />

                <div class="formbold-input-flex">
                    <div>
                        <label asp-for="Nombre" class="formbold-form-label"></label>
                        <input asp-for="Nombre" class="formbold-form-input" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div>
                        <label asp-for="Codigo" class="formbold-form-label"></label>
                        <input asp-for="Codigo" class="formbold-form-input" />
                        <span asp-validation-for="Codigo" class="text-danger"></span>
                    </div>
                </div>

                <div>
                    <label asp-for="Descripcion" class="formbold-form-label"></label>
                    <textarea asp-for="Descripcion" class="formbold-form-input"></textarea>
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div>
                    <label asp-for="Estado" class="formbold-form-label"></label>
                    <select asp-for="Estado" class="formbold-form-input">
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <button type="submit" class="btn-create-d">
                    <i class="fas fa-save"></i> Guardar cambios
                </button>
            </form>
        </div>
    </div>
</div>