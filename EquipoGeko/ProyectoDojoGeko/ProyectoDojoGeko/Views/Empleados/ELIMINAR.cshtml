@model ProyectoDojoGeko.Models.EmpleadoViewModel
@{
    ViewData["Title"] = "Eliminar Empleado - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="eliminar-empleado-container">
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-user-times"></i>
                Eliminar Empleado
            </h1>
            <p class="page-subtitle">
                Confirma la eliminación del empleado seleccionado
            </p>
        </div>
        <div class="breadcrumb">
            <a href="@Url.Action("Index", "Empleados")">Empleados</a>
            <span class="separator">/</span>
            <span class="current">Eliminar</span>
        </div>
    </div>

    <div class="confirmation-card">
        <div class="warning-header">
            <div class="warning-icon">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <h2>¿Estás seguro de que deseas eliminar este empleado?</h2>
            <p class="warning-subtitle">Esta acción no se puede deshacer</p>
        </div>

        <div class="empleado-preview">
            <div class="empleado-avatar">
                <img src="/imagenes/mr8.png" alt="@Model.NombreEmpleado @Model.ApellidoEmpleado" class="avatar-image">
                <div class="avatar-overlay">
                    <i class="fas fa-user-times"></i>
                </div>
            </div>
            <div class="empleado-basic-info">
                <h3 class="empleado-nombre">@Model.NombreEmpleado @Model.ApellidoEmpleado</h3>
                <p class="empleado-id">ID: @Model.IdEmpleado</p>
                <span class="estado-badge @(Model.Estado ? "activo" : "inactivo")">
                    <i class="fas fa-@(Model.Estado ? "check-circle" : "times-circle")"></i>
                    @(Model.Estado ? "Activo" : "Inactivo")
                </span>
            </div>
        </div>

        <div class="empleado-details">
            <h4 class="details-title">
                <i class="fas fa-info-circle"></i>
                Información del Empleado
            </h4>
            <div class="details-grid">
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-id-card"></i>
                        DPI
                    </div>
                    <div class="detail-value">@Model.DPI</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-envelope"></i>
                        Correo Institucional
                    </div>
                    <div class="detail-value">@Model.CorreoInstitucional</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-calendar-alt"></i>
                        Fecha de Ingreso
                    </div>
                    <div class="detail-value">@Model.FechaIngreso.ToString("dd/MM/yyyy")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-venus-mars"></i>
                        Género
                    </div>
                    <div class="detail-value">@Model.Genero</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-money-bill-wave"></i>
                        Salario
                    </div>
                    <div class="detail-value">Q @Model.Salario.ToString("N2")</div>
                </div>
                <div class="detail-item">
                    <div class="detail-label">
                        <i class="fas fa-phone"></i>
                        Teléfono
                    </div>
                    <div class="detail-value">
                        @if (string.IsNullOrEmpty(Model.Telefono.ToString()) || Model.Telefono == 0)
                        {
                            <span>No registrado</span>
                        }
                        else
                        {
                            @Model.Telefono
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="warning-message">
            <div class="warning-content">
                <i class="fas fa-exclamation-triangle"></i>
                <div class="warning-text">
                    <h5>¡Atención!</h5>
                    <p>Al eliminar este empleado se perderá permanentemente:</p>
                    <ul>
                        <li>Toda la información personal y laboral</li>
                        <li>Historial de actividades en el sistema</li>
                        <li>Registros asociados a este empleado</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a href="@Url.Action("Index", "Empleados")" class="btn-cancel" data-tooltip="Volver al listado sin eliminar">
                <i class="fas fa-arrow-left"></i>
                <span>Cancelar</span>
            </a>
            
            <a href="@Url.Action("Detalle", "Empleados", new { id = Model.IdEmpleado })" class="btn-view" data-tooltip="Ver información completa del empleado">
                <i class="fas fa-eye"></i>
                <span>Ver Detalles</span>
            </a>
            
            <form method="post" action="@Url.Action("ELIMINAR", "Empleados", new { id = Model.IdEmpleado })" class="delete-form">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn-delete" data-tooltip="Eliminar empleado permanentemente">
                    <i class="fas fa-trash-alt"></i>
                    <span>Confirmar Eliminación</span>
                </button>
            </form>
        </div>
    </div>
</div>

@section Styles {
<link rel="stylesheet" href="~/css/eliminar-empleado.css" />
}

@section Scripts {
<script src="~/js/eliminar-empleado.js"></script>
}