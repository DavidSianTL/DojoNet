@model ProyectoDojoGeko.Models.EmpleadoViewModel
@{
    ViewData["Title"] = (Model.IdEmpleado == 0 ? "Crear" : "Editar") + " Empleado - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
    bool isEdit = Model.IdEmpleado > 0;
}

<div class="empleado-form-container">
    <!-- Header de la pagina -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-@(isEdit ? "edit" : "user-plus")"></i>
                @(isEdit ? "Editar" : "Crear") Empleado
            </h1>
            <p class="page-subtitle">
                @(isEdit ? "Modifica la informacion del empleado seleccionado" : "Ingresa los datos del nuevo empleado")
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Empleados")" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                <span>Volver a la Lista</span>
            </a>
        </div>
    </div>

    <!-- Formulario principal -->
    <div class="form-card">
        <form asp-action="@(isEdit ? "EDITAR" : "CREAR")" method="post" id="empleadoForm" novalidate>
            @if (isEdit)
            {
            <input asp-for="IdEmpleado" type="hidden" />
            }

            <!-- Informacion Personal -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-user"></i>
                        Informacion Personal
                    </h2>
                    <p class="section-subtitle">Datos basicos del empleado</p>
                </div>

                <div class="form-grid">
                    <!-- DPI -->
                    <div class="form-group">
                        <label asp-for="DPI" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-id-card"></i>
                            </div>
                            <span>DPI</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="DPI" class="form-control" placeholder="Ingrese el DPI" maxlength="15" />
                            <span asp-validation-for="DPI" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- NIT -->
                    <div class="form-group">
                        <label asp-for="NIT" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-file-invoice"></i>
                            </div>
                            <span>NIT</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="NIT" class="form-control" placeholder="Ingrese el NIT" maxlength="15" />
                            <span asp-validation-for="NIT" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Nombre -->
                    <div class="form-group">
                        <label asp-for="NombreEmpleado" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <span>Nombre</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="NombreEmpleado" class="form-control" placeholder="Ingrese el nombre" maxlength="50" />
                            <span asp-validation-for="NombreEmpleado" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Apellido -->
                    <div class="form-group">
                        <label asp-for="ApellidoEmpleado" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <span>Apellido</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="ApellidoEmpleado" class="form-control" placeholder="Ingrese el apellido" maxlength="50" />
                            <span asp-validation-for="ApellidoEmpleado" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Fecha de Nacimiento -->
                    <div class="form-group">
                        <label asp-for="FechaNacimiento" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <span>Fecha de Nacimiento</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="FechaNacimiento" type="date" class="form-control" />
                            <span asp-validation-for="FechaNacimiento" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Genero -->
                    <div class="form-group">
                        <label asp-for="Genero" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-venus-mars"></i>
                            </div>
                            <span>Genero</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <select asp-for="Genero" class="form-control">
                                <option value="">Seleccione el genero</option>
                                <option value="Masculino">Masculino</option>
                                <option value="Femenino">Femenino</option>
                                <option value="Otro">Otro</option>
                            </select>
                            <span asp-validation-for="Genero" class="validation-message"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informacion de Contacto -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-address-book"></i>
                        Informacion de Contacto
                    </h2>
                    <p class="section-subtitle">Datos de contacto y comunicacion</p>
                </div>

                <div class="form-grid">
                    <!-- Correo Personal -->
                    <div class="form-group">
                        <label asp-for="CorreoPersonal" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <span>Correo Personal</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="CorreoPersonal" type="email" class="form-control" placeholder="ejemplo@correo.com" maxlength="50" />
                            <span asp-validation-for="CorreoPersonal" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Correo Institucional -->
                    <div class="form-group">
                        <label asp-for="CorreoInstitucional" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-building"></i>
                            </div>
                            <span>Correo Institucional</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="CorreoInstitucional" type="email" class="form-control" placeholder="ejemplo@geko.com" maxlength="50" />
                            <span asp-validation-for="CorreoInstitucional" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Telefono -->
                    <div class="form-group">
                        <label asp-for="Telefono" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <span>Telefono</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Telefono" type="tel" class="form-control" placeholder="12345678" />
                            <span asp-validation-for="Telefono" class="validation-message"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informacion Laboral -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-briefcase"></i>
                        Informacion Laboral
                    </h2>
                    <p class="section-subtitle">Datos relacionados con el empleo</p>
                </div>

                <div class="form-grid">
                    <!-- Fecha de Ingreso -->
                    <div class="form-group">
                        <label asp-for="FechaIngreso" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-calendar-plus"></i>
                            </div>
                            <span>Fecha de Ingreso</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="FechaIngreso" type="date" class="form-control" />
                            <span asp-validation-for="FechaIngreso" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Salario -->
                    <div class="form-group">
                        <label asp-for="Salario" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                            <span>Salario</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <div class="input-with-prefix">
                                <span class="input-prefix">Q</span>
                                <input asp-for="Salario" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Salario" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Estado -->
                    <div class="form-group">
                        <label asp-for="Estado" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-toggle-on"></i>
                            </div>
                            <span>Estado</span>
                        </label>
                        <div class="input-container">
                            <div class="toggle-container">
                                <input asp-for="Estado" type="checkbox" class="toggle-input" id="estadoToggle" />
                                <label for="estadoToggle" class="toggle-label">
                                    <span class="toggle-slider"></span>
                                    <span class="toggle-text">Activo</span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de accion -->
            <div class="form-actions">
                <div class="actions-container">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("Index", "Empleados")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>

                    <button type="reset" class="btn-reset" id="resetBtn">
                        <i class="fas fa-undo"></i>
                        <span>Limpiar</span>
                    </button>

                    <button type="submit" class="btn-submit" id="submitBtn">
                        <i class="fas fa-@(isEdit ? "save" : "plus")"></i>
                        <span>@(isEdit ? "Actualizar" : "Crear") Empleado</span>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Modal de confirmacion -->
<div class="modal-overlay" id="confirmModal">
    <div class="modal-container">
        <div class="modal-header">
            <h3>Confirmar Accion</h3>
            <button class="modal-close" id="closeModal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="modal-icon success">
                <i class="fas fa-question-circle"></i>
            </div>
            <p id="modalMessage">Esta seguro que desea guardar los cambios?</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" id="cancelAction">
                <i class="fas fa-times"></i>
                Cancelar
            </button>
            <button class="btn-confirm" id="confirmAction">
                <i class="fas fa-check"></i>
                Confirmar
            </button>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/empleado-form.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/empleado-form.js"></script>
}