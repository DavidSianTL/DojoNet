@model ProyectoDojoGeko.Dtos.Empleados.Requests.CrearEmpleadoRequest
@{
    ViewData["Title"] = "Gestion de Empleados - GEKO Sistemas de Seguridad";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";

    // Obtener los estados del ViewBag
    var todosLosEstados = ViewBag.Estados;

    // Obtener los paises del ViewBag
	var todosLosPaises = ViewBag.Paises;

    // Obtener los roles del usuario desde la sesión
    var rolesString = Context.Session.GetString("Roles") ?? "";
    var userRoles = rolesString.Split(',').Where(r => !string.IsNullOrEmpty(r)).ToList();

    // Calcular permisos basados en los roles
    bool puedeHacerTodo = userRoles.Contains("SuperAdministrador");
    bool puedeCrear = userRoles.Any(r => new[] { "SuperAdministrador", "Administrador", "Editor" }.Contains(r));
    bool puedeEditar = userRoles.Any(r => new[] { "SuperAdministrador", "Administrador", "Editor" }.Contains(r));
    bool puedeEliminar = userRoles.Any(r => new[] { "SuperAdministrador", "Administrador" }.Contains(r));
    bool reportes = userRoles.All(r => r == "Visualizador");
}

<div class="empleado-form-container">
    <!-- Header de la pagina -->
    <div class="page-header">
        <div class="header-content">
            <h1 class="page-title">
                <i class="fas fa-user-plus"></i>
                Crear Empleado
            </h1>
            <p class="page-subtitle">
                Ingresa los datos del nuevo empleado
            </p>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index", "Empleados")" class="btn-back">
                <i class="fas fa-arrow-left"></i>
                <span>Volver a la Lista</span>
            </a>
        </div>
    </div>

    <!-- Formulario principal -->
    <div class="form-card">
        <form asp-action="Crear" method="post" id="empleadoForm" novalidate>
            <!-- Informacion Personal -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-user"></i>
                        Informacion Personal
                    </h2>
                    <p class="section-subtitle">Datos basicos del empleado</p>
                </div>

                <div class="form-grid">

                    <!-- Tipo de documento -->
                    <div class="form-group">
                        <div class="input-container">
                            <label class="form-label">
                                <div class="label-icon">
                                    <i class="fas fa-toggle-on"></i>
                                </div>
                                <span>Tipo de documento</span>
                                <span class="required">*</span>
                            </label>
                            <select id="documentoSelect" name="TipoDocumento" class="form-control" required>
                                <option value="DPI">DPI</option>
                                <option value="Pasaporte">Pasaporte</option>
                            </select>
                        </div>
                    </div>

                    <!-- DPI -->
                    <div class="form-group" id="dpi-group">
                        <label asp-for="DPI" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-id-card"></i>
                            </div>
                            <span>DPI</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="DPI" class="form-control" placeholder="Ingrese el DPI (13 dígitos)" maxlength="13" />
                            <span asp-validation-for="DPI" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Pasaporte -->
                    <div class="form-group" id="pasaporte-group" style="display:none;">
                        <label asp-for="Pasaporte" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-id-card"></i>
                            </div>
                            <span>Pasaporte</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Pasaporte" class="form-control" placeholder="Ingrese el Pasaporte (15 dígitos)" maxlength="15" />
                            <span asp-validation-for="Pasaporte" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Pais -->
                    <div class="form-group">
                        <div class="input-container">
                            <label asp-for="Pais" class="form-label">
                                <div class="label-icon">
                                    <i class="fas fa-toggle-on"></i>
                                </div>
                                <span>Pais</span>
                                <span class="required">*</span>
                            </label>
                            <select id="paisSelect" asp-for="Pais" class="form-control">
                                <option value="">Seleccione un país</option>
                                @foreach (var pais in todosLosPaises)
                                {
                                    <option value="@pais">@pais</option>
                                }
                            </select>
                            <span asp-validation-for="Pais" class="text-danger"></span>
                        </div>
                    </div>

                    <!-- Nombre -->
                    <div class="form-group">
                        <label asp-for="NombresEmpleado" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <span>Nombre</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="NombresEmpleado" class="form-control" placeholder="Ingrese el nombre" maxlength="50" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" title="Solo se permiten letras y espacios" />
                            <span asp-validation-for="NombresEmpleado" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Apellido -->
                    <div class="form-group">
                        <label asp-for="ApellidosEmpleado" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-user"></i>
                            </div>
                            <span>Apellido</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="ApellidosEmpleado" class="form-control" placeholder="Ingrese el apellido" maxlength="50" pattern="[A-Za-zÁÉÍÓÚáéíóúÑñ\s]+" title="Solo se permiten letras y espacios" />
                            <span asp-validation-for="ApellidosEmpleado" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Fecha de Nacimiento -->
                    <div class="form-group">
                        <label asp-for="FechaNacimiento" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <span>Fecha de Nacimiento</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="FechaNacimiento" type="date" class="form-control" />
                            <span asp-validation-for="FechaNacimiento" class="validation-message"></span>
                        </div>
                    </div>


                </div>
            </div>

            <!-- Informacion de Contacto -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-address-book"></i>
                        Informacion de Contacto
                    </h2>
                    <p class="section-subtitle">Datos de contacto y comunicacion</p>
                </div>

                <div class="form-grid">
                    <!-- Correo Personal -->
                    <div class="form-group">
                        <label asp-for="CorreoPersonal" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <span>Correo Personal</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="CorreoPersonal" type="email" class="form-control" placeholder="ejemplo@correo.com" maxlength="50" />
                            <span asp-validation-for="CorreoPersonal" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Correo Institucional -->
                    <div class="form-group">
                        <label asp-for="CorreoInstitucional" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-envelope"></i>
                            </div>
                            <span>Email</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="CorreoInstitucional" type="email" class="form-control" placeholder="ejemplo@empresa.com" />
                            <span asp-validation-for="CorreoInstitucional" class="validation-message"></span>
                        </div>
                    </div>


                    <!-- Telefono -->
                    <div class="form-group">
                        <label asp-for="Telefono" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-phone"></i>
                            </div>
                            <span>Telefono</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="Telefono" type="tel" class="form-control" placeholder="12345678" />
                            <span asp-validation-for="Telefono" class="validation-message"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Informacion Laboral -->
            <div class="form-section">
                <div class="section-header">
                    <h2 class="section-title">
                        <i class="fas fa-briefcase"></i>
                        Informacion Laboral
                    </h2>
                    <p class="section-subtitle">Datos relacionados con el empleo</p>
                </div>

                <div class="form-grid">
                    <!-- Fecha de Ingreso -->
                    <div class="form-group">
                        <label asp-for="FechaIngreso" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <span>Fecha de Ingreso</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <input asp-for="FechaIngreso" type="date" class="form-control" />
                            <span asp-validation-for="FechaIngreso" class="validation-message"></span>
                        </div>
                    </div>


                    <!-- Salario -->
                    <div class="form-group">
                        <label asp-for="Salario" class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-money-bill-wave"></i>
                            </div>
                            <span>Salario</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <div class="input-with-prefix">
                                <span class="input-prefix">Q</span>
                                <input asp-for="Salario" type="number" step="0.01" min="0" class="form-control" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Salario" class="validation-message"></span>
                        </div>
                    </div>

                    <!-- Estado -->
                    <div class="form-group">
                        <div class="input-container">
                            <label asp-for="Estado" class="form-label">
                                <div class="label-icon">
                                    <i class="fas fa-toggle-on"></i>
                                </div>
                                <span>Estado</span>
                                <span class="required">*</span>
                            </label>
                            <select id="estadoSelect" asp-for="Estado" class="form-control">
                                <option value="">Seleccione un estado</option>
                                @foreach (var estado in ViewBag.Estados)
                                {
                                    <option value="@estado.IdEstado">@estado.Estado</option>
                                }
                            </select>
                            <span asp-validation-for="Estado" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de accion -->
            <div class="form-actions">
                <div class="actions-container">
                    <button type="button" class="btn-cancel" onclick="window.location.href='@Url.Action("Index", "Empleados")'">
                        <i class="fas fa-times"></i>
                        <span>Cancelar</span>
                    </button>

                    <button type="reset" class="btn-reset" id="resetBtn">
                        <i class="fas fa-undo"></i>
                        <span>Limpiar</span>
                    </button>

                    <button type="submit" class="btn-submit" id="submitBtn">
                        <i class="fas fa-plus"></i>
                        <span>Crear Empleado</span>
                    </button>
                </div>
            </div>

        </form>
    </div>
</div>

<!-- Modal de confirmacion -->
<div class="modal-overlay" id="confirmModal">
    <div class="modal-container">
        <div class="modal-header">
            <h3>Confirmar Accion</h3>
            <button class="modal-close" id="closeModal">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="modal-icon success">
                <i class="fas fa-question-circle"></i>
            </div>
            <p id="modalMessage">Esta seguro que desea guardar los cambios?</p>
        </div>
        <div class="modal-footer">
            <button class="btn-cancel" id="cancelAction">
                <i class="fas fa-times"></i>
                Cancelar
            </button>
            <button class="btn-confirm" id="confirmAction">
                <i class="fas fa-check"></i>
                Confirmar
            </button>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/empleado-form.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/empleado-form.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const select = document.getElementById('documentoSelect');
            const dpiGroup = document.getElementById('dpi-group');
            const pasaporteGroup = document.getElementById('pasaporte-group');

            function updateFields() {
                if (select.value === 'DPI') {
                    dpiGroup.style.display = '';
                    pasaporteGroup.style.display = 'none';
                } else {
                    dpiGroup.style.display = 'none';
                    pasaporteGroup.style.display = '';
                }
            }

            select.addEventListener('change', updateFields);
            updateFields(); // inicializa el estado correcto
        });
    </script>

}