@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    <!-- Tu CSS personalizado -->
    <link rel="stylesheet" href="~/css/login-styles.css">
</head>
<body class="login-page">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card shadow login-card">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/imagenes/FondoLogin2.png"
                                     alt="login form" class="img-fluid login-image" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <!-- Mostrar mensaje de error si existe -->
                                    @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                            @ViewBag.Mensaje
                                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                                        </div>
                                    }

                                    <form id="loginForm" method="post" asp-controller="Login" asp-action="LoginUsuario" novalidate>
                                        @Html.AntiForgeryToken()
                                        
                                        <div class="text-center mb-4">
                                            <h2 class="fw-bold mb-2">Iniciar Sesión</h2>
                                            <p class="text-muted">Ingresa tus credenciales para continuar</p>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="usuario"><i class="bi bi-person-fill"></i> Usuario</label>
                                            <input type="text" id="usuario" name="usuario" class="form-control form-control-lg" 
                                                   placeholder="TuUsuario123" required value="@ViewBag.Usuario" />
                                            <div class="invalid-feedback">Ingresa tu nombre de usuario.</div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="password"><i class="bi bi-lock-fill"></i> Contraseña</label>
                                            <div class="password-input-container">
                                                <input type="password" id="password" name="password" class="form-control form-control-lg" 
                                                       placeholder="******" required minlength="6" />
                                                <button type="button" class="password-toggle" onclick="togglePassword()">
                                                    <i class="bi bi-eye" id="toggleIcon"></i>
                                                </button>
                                            </div>
                                            <div class="invalid-feedback">La contraseña debe tener al menos 6 caracteres</div>
                                        </div>

                                        <div class="pt-1 mb-4 text-center">
                                            <button class="btn-login btn-lg w-100" type="submit" id="loginButton">
                                                <span class="login-text">Ingresar</span>
                                                <span class="login-spinner d-none">
                                                    <i class="bi bi-arrow-clockwise spin"></i> Verificando...
                                                </span>
                                            </button>
                                        </div>

                                        <div class="text-center">
                                            <a class="small text-muted" href="#" onclick="forgotPassword()">¿Olvidaste tu contraseña?</a><br />
                                            <span class="text-muted">¿No tienes una cuenta?</span>
                                            <a href="#" class="register-link" onclick="register()"> Regístrate aquí</a>
                                        </div>

                                        <div class="text-center mt-2">
                                            <a href="#" class="small text-muted" onclick="privacyPolicy()">Política de privacidad</a>
                                        </div>
                                    </form>

                                    <!-- Sección de prueba para desarrollo -->
                                    <div class="test-section mt-4">
                                        <hr>
                                        <div class="text-center">
                                            <small class="text-muted">Modo de prueba para desarrollo</small>
                                            <form method="post" asp-controller="Login" asp-action="LoginPrueba" class="mt-2">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="usuario" value="AdminDev" />
                                                <input type="hidden" name="password" value="12345678" />
                                                <button type="submit" class="btn btn-outline-secondary btn-sm">
                                                    <i class="bi bi-gear"></i> Login de Prueba
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/login-validation.js"></script>
</body>
</html>