@{
    ViewData["Title"] = "Login";
}



<body style="background-image: url('/images/FondoLogin.gif'); background-size: cover; background-repeat: no-repeat; background-position: center; background-attachment: fixed;">
    <section class="vh-100">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card shadow" style="border-radius: 1rem; background-color: rgba(255, 255, 255, 0.9);">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="~/images/FondoLogin2.png"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form id="loginForm" method="post" asp-controller="Login" asp-action="LoginUsuario" novalidate>
                                        <div class="text-center mb-4">
                                            <h2 class="fw-bold mb-2">Iniciar Sesión</h2>
                                            <p class="text-muted">Ingresa tus credenciales para continuar</p>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="usuario"><i class="bi bi-person-fill"></i> Usuario</label>
                                            <input type="text" id="usuario" name="usuario" class="form-control form-control-lg" placeholder="TuUsuario123" required />
                                            <div class="invalid-feedback">Ingresa tu nombre de usuario.</div>
                                        </div>

                                        <div class="form-outline mb-4">
                                            <label class="form-label" for="password"><i class="bi bi-lock-fill"></i> Contraseña</label>
                                            <input type="password" id="password" name="password" class="form-control form-control-lg" placeholder="******" required minlength="6" />
                                            <div class="invalid-feedback">La contraseña debe tener al menos 6 caracteres </div>
                                        </div>

                                        <div class="pt-1 mb-4 text-center">
                                            <button class="btn btn-primary btn-lg w-100" type="submit">Ingresar</button>
                                        </div>

                                        <div class="text-center">
                                            <a class="small text-muted" href="#">¿Olvidaste tu contraseña?</a><br />
                                            <span class="text-muted">¿No tienes una cuenta?</span>
                                            <a href="#" style="color: #393f81;"> Regístrate aquí</a>
                                        </div>

                                        <div class="text-center mt-2">
                                            <a href="#" class="small text-muted">Política de privacidad</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

@section Scripts {
    <script src="~/js/login-validation.js"></script>
}
