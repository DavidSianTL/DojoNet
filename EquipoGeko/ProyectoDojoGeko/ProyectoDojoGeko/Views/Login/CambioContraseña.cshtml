@{
    ViewData["Title"] = "Cambio de Contraseña - GEKO Sistemas de Seguridad";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>@ViewData["Title"]</title>

    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <!-- CSS personalizado -->
    <link rel="stylesheet" href="~/css/cambio-contraseña.css" />
</head>
<body>
    <div class="cambio-password-wrapper">
        <!-- Decoración de fondo elegante -->
        <div class="background-decoration">
            <div class="floating-shape shape-1"></div>
            <div class="floating-shape shape-2"></div>
            <div class="floating-shape shape-3"></div>
            <div class="floating-shape shape-4"></div>
        </div>

        <div class="cambio-password-container">
            <div class="cambio-password-card">
                <!-- Header elegante con gradiente sutil -->
                <div class="header-section">
                    <div class="logo-container">
                        <div class="logo-wrapper">
                            <img src="~/imagenes/images.webp" alt="GEKO Logo" class="logo" />
                            <div class="logo-glow"></div>
                        </div>
                    </div>
                    <h1 class="title">
                        <i class="fas fa-shield-alt"></i>
                        Cambio de Contraseña
                    </h1>
                    <p class="subtitle">
                        @if (!string.IsNullOrEmpty(ViewBag.Usuario))
                        {
                        <span class="user-welcome">
                            <i class="fas fa-user-circle"></i>
                            Bienvenido <strong>@ViewBag.Usuario</strong>
                        </span>
                        <br>
                        }
                        <span class="security-message">
                            <i class="fas fa-lock"></i>
                            Actualice su contraseña para mantener su cuenta segura
                        </span>
                    </p>
                </div>

                <!-- Mostrar mensaje con diseño mejorado -->
                @if (!string.IsNullOrEmpty(ViewBag.Mensaje))
                {
                <div class="alert-container">
                    <div class="alert alert-info">
                        <div class="alert-icon">
                            <i class="fas fa-info-circle"></i>
                        </div>
                        <div class="alert-content">
                            <span>@ViewBag.Mensaje</span>
                        </div>
                        <button type="button" class="alert-close" onclick="this.parentElement.parentElement.style.display='none'">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                }

                <!-- Formulario con diseño premium -->
                <form method="post" class="cambio-form" id="passwordForm">
                    <!-- Contraseña actual -->
                    <div class="form-group">
                        <label class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-lock"></i>
                            </div>
                            <span>Contraseña Actual</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <div class="input-wrapper">
                                <input name="contraseñaActual" type="password" class="form-control"
                                       placeholder="Ingrese su contraseña actual" required id="currentPassword" />
                                <div class="input-border"></div>
                            </div>
                            <button type="button" class="toggle-password" data-target="currentPassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <!-- Nueva contraseña -->
                    <div class="form-group">
                        <label class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-key"></i>
                            </div>
                            <span>Nueva Contraseña</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <div class="input-wrapper">
                                <input name="nuevaContraseña" type="password" class="form-control"
                                       placeholder="Ingrese su nueva contraseña" required
                                       minlength="8" id="nuevaPassword" />
                                <div class="input-border"></div>
                            </div>
                            <button type="button" class="toggle-password" data-target="nuevaPassword">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>

                        <!-- Indicador de fuerza premium -->
                        <div class="password-strength">
                            <div class="strength-container">
                                <div class="strength-bar">
                                    <div class="strength-fill" id="strengthBar"></div>
                                    <div class="strength-glow"></div>
                                </div>
                                <div class="strength-info">
                                    <span class="strength-text" id="strengthText">Ingrese una contraseña</span>
                                    <span class="strength-percentage" id="strengthPercentage">0%</span>
                                </div>
                            </div>
                        </div>

                        <!-- Requisitos dinámicos (solo aparecen cuando faltan) -->
                        <div class="requirements-container" id="requirementsContainer" style="display: none;">
                            <div class="requirements-header">
                                <i class="fas fa-exclamation-triangle"></i>
                                <span>Requisitos faltantes:</span>
                            </div>
                            <div class="requirements-list" id="requirementsList"></div>
                        </div>
                    </div>

                    <!-- Confirmar contraseña -->
                    <div class="form-group">
                        <label class="form-label">
                            <div class="label-icon">
                                <i class="fas fa-check-double"></i>
                            </div>
                            <span>Confirmar Nueva Contraseña</span>
                            <span class="required">*</span>
                        </label>
                        <div class="input-container">
                            <div class="input-wrapper">
                                <input name="confirmarContraseña" type="password" class="form-control"
                                       placeholder="Confirme su nueva contraseña" required
                                       id="confirmarPassword" />
                                <div class="input-border"></div>
                            </div>
                            <button type="button" class="toggle-password" data-target="confirmarPassword">
                                <i class="fas fa-eye"></i>
                            </button>
                            <div class="match-indicator" id="matchIndicator">
                                <i class="fas fa-times"></i>
                            </div>
                        </div>
                        <div class="match-message" id="matchMessage"></div>
                    </div>

                    <!-- Botones premium con efectos -->
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                            <div class="btn-content">
                                <i class="fas fa-save"></i>
                                <span>Cambiar Contraseña</span>
                            </div>
                            <div class="btn-shine"></div>
                            <div class="btn-ripple"></div>
                        </button>

                        <div class="secondary-actions">
                            <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
                                <i class="fas fa-home"></i>
                                <span>Volver al Inicio</span>
                                <div class="btn-ripple"></div>
                            </a>

                            <button type="button" class="btn btn-outline" id="resetBtn">
                                <i class="fas fa-redo"></i>
                                <span>Limpiar</span>
                                <div class="btn-ripple"></div>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- JavaScript externo -->
    <script src="~/js/cambio-contraseña.js"></script>
</body>
</html>
