@model List<ProductoApi>
@{
    ViewData["Title"] = "Productos FakeStoreAPI";
}

<link rel="stylesheet" href="~/css/ApiRest.css" />

<div class="container mt-4">
    <h1 class="mb-4">Productos</h1>
    <form asp-controller="Home" asp-action="Index" method="get" class="mt-3">
        <button type="submit" class="btn btn-primary rounded-3 shadow-sm">
            <i class="bi bi-arrow-left-circle me-1"></i> Volver
        </button>
    </form>

    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var producto in Model)
        {
            <div class="col">
                <div class="card product-card h-100 shadow-sm">
                    <img src="@producto.image" class="card-img-top" alt="@producto.title">
                    <div class="card-body">
                        <h5 class="card-title">@producto.title</h5>
                        <p class="card-text text-truncate" title="@producto.description">
                            @producto.description
                        </p>
                        <p class="fw-bold">Precio: $@producto.price</p>
                    </div>
                    <div class="card-footer text-center">
                        <a href="@Url.Action("Edit", "ProductosApi", new { id = producto.id })" class="btn btn-sm btn-warning me-2">
                            <i class="bi bi-pencil-fill"></i> Editar
                        </a>
                        <form asp-action="Delete" asp-controller="ProductosApi" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@producto.id" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('¿Estás seguro que deseas eliminar este producto?');">
                                <i class="bi bi-trash-fill"></i> Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    <script>
        @if (TempData["Success"] != null)
        {
            <text>mostrarAlertaExito("@TempData["Success"]");</text>
        }

        @if (TempData["Error"] != null)
        {
            <text>mostrarAlertaError("@TempData["Error"]");</text>
        }
    </script>
}