@model ErrorViewModel
@{
    ViewData["Title"] = "Ha ocurrido un error";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var codigo = Context.Response.StatusCode;
    var mensaje = codigo switch
    {
        404 => "La página que buscas no existe.",
        403 => "No tienes permiso para acceder a esta sección.",
        500 => "Algo salió mal en el servidor.",
        _ => "Ha ocurrido un error inesperado."
    };
}

<div class="container mt-5">
    <div class="text-center">
        <h1 class="display-3 text-danger">
            <i class="bi bi-exclamation-triangle-fill"></i> ¡Error!
        </h1>
        <p class="lead">@mensaje</p>

        
        <div class="my-4">
            <img src="https://enterlatvia.com/assets/error.gif" alt="Error GIF" class="img-fluid rounded shadow" style="max-width: 300px;" />
        </div>

        @if (Model.ShowRequestId)
        {
            <p class="text-muted">
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </p>
        }

        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary mt-3">
            <i class="bi bi-arrow-left-circle"></i> Volver al inicio
        </a>
    </div>
</div>
