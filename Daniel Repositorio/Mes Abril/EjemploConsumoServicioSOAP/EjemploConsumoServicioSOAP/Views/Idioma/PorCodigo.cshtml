@model List<CountryInfoService.tLanguage>

@{
    ViewData["Title"] = "Idiomas por Código";
}

<h2>Lista de Idiomas (Ordenados por Código)</h2>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Código ISO</th>
                <th>Nombre</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var idioma in Model)
            {
                <tr>
                    <td>@idioma.sISOCode</td>
                    <td>@idioma.sName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">No se encontraron idiomas.</div>
}
