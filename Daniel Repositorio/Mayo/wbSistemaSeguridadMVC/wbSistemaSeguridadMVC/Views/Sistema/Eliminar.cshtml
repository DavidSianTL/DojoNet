@model wbSistemaSeguridadMVC.Models.Sistema

<h2>Eliminar sistema</h2>
<p>Estas seguro que desea eliminar el sistema? <strong>@Model.NombreSistema</strong></p>

@using (Html.BeginForm("Eliminar", "Sistema", FormMethod.Post))
{
	@Html.HiddenFor(m => m.IdSistema)
	<input type="submit" value="Eliminar" class="btn btn-danger" />
	<a href="@Url.Action("Index","Sistema")" class="btn btn-secondary">Cancelar</a>
}