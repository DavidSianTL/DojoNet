@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Login Seguro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #ffd5c2, #ffb199);
            height: 100vh;
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            font-family: 'Segoe UI', sans-serif;
        }

        .login-card {
            background-color: #ffffff;
            border-radius: 16px;
            padding: 2.5rem 2rem;
            width: 100%;
            max-width: 480px;
            box-shadow: 0 12px 32px rgba(0, 0, 0, 0.1);
        }

        .login-title {
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2rem;
            font-weight: bold;
            color: #d35400;
        }

        .form-label {
            font-weight: 600;
            color: #5a2e1c;
        }

        .form-control {
            background-color: #fff3ed;
            border: 1px solid #e0a899;
            border-radius: 10px;
            padding: 0.625rem;
        }

            .form-control:focus {
                border-color: #f7bba3;
                box-shadow: 0 0 0 0.2rem rgba(247, 187, 163, 0.25);
            }

        .btn-primary {
            background-color: #f2856d;
            border: none;
            font-weight: bold;
            width: 100%;
            padding: 0.75rem;
            font-size: 1.1rem;
            border-radius: 10px;
        }

            .btn-primary:hover {
                background-color: #e76b4e;
            }

        .invalid-feedback {
            display: none;
            color: #d9534f;
            font-size: 0.875rem;
            margin-top: 4px;
        }

        input.is-invalid ~ .invalid-feedback {
            display: block;
        }
    </style>
</head>
<body>
    <div class="login-card">
        <div class="login-title">Iniciar Sesión</div>
        <form id="loginForm" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Usuario</label>
                <input type="text" class="form-control" id="username" name="username" placeholder="Ingrese su usuario" required>
                <div class="invalid-feedback">Ingrese un usuario válido (sin caracteres peligrosos).</div>
            </div>
            <div class="mb-4">
                <label for="password" class="form-label">Contraseña</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Ingrese su contraseña" required>
                <div class="invalid-feedback">Ingrese una contraseña válida (mínimo 6 caracteres, sin caracteres inseguros).</div>
            </div>
            <button type="submit" class="btn btn-primary">Entrar</button>
        </form>
    </div>

    <script>
        (() => {
            const form = document.getElementById('loginForm');
            const username = document.getElementById('username');
            const password = document.getElementById('password');

            // Caracteres prohibidos
            const forbiddenPattern = /[<>'"\\;]/;

            form.addEventListener('submit', (e) => {
                let valid = true;

                // Validar usuairo
                if (username.value.trim().length < 3 || forbiddenPattern.test(username.value)) {
                    username.classList.add('is-invalid');
                    valid = false;
                } else {
                    username.classList.remove('is-invalid');
                }

                // Validar contraseña
                if (password.value.trim().length < 6 || forbiddenPattern.test(password.value)) {
                    password.classList.add('is-invalid');
                    valid = false;
                } else {
                    password.classList.remove('is-invalid');
                }

                if (!valid) {
                    e.preventDefault();
                    e.stopPropagation();
                } else {
                    alert("Formulario válido. Enviando datos...");
                    e.preventDefault();
                }
            });
        })();
    </script>
</body>
</html>
