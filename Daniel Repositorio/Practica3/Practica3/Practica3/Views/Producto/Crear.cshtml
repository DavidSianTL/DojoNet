@model Practica3.Models.Producto

<h2>Nuevo Producto</h2>

<form asp-action="Crear" method="post">
    <div>
        <label>Nombre:</label>
        <input asp-for="Nombre" required />
    </div>
    <div>
        <label>Precio:</label>
        <input asp-for="Precio" type="number" step="0.01" required />
    </div>
    <div>
        <label>Stock:</label>
        <input asp-for="Stock" type="number" required />
    </div>
    <button type="submit">Guardar</button>
</form>