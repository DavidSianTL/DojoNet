@model EmpresaLogin.Models.Usuario
@{
    ViewData["Title"] = "Empresa";
    var mensaje = ViewBag.Mensaje as string;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Empresa</title>
    <style>
        body {
            background-color: black;
            color: white;
            font-family: Arial;
            padding: 20px;
        }
        .alert {
            padding: 15px;
            margin-top: 20px;
            border-radius: 5px;
        }
        .alert-success {
            background-color: #4CAF50;
            color: white;
        }
        .alert-error {
            background-color: #f44336;
            color: white;
        }
        label, input {
            display: block;
            margin-top: 10px;
        }
    </style>
    <script>
        function validarFormulario() {
            const nombre = document.getElementById("Nombre").value;
            const edad = document.getElementById("Edad").value;

            if (nombre.trim() === "" || isNaN(edad) || edad <= 0) {
                alert("Error: Nombre y edad válidos son requeridos.");
                return false;
            }
            return true;
        }
    </script>
</head>
<body>
    <h1>Empresa</h1>

    <form asp-action="Index" method="post" onsubmit="return validarFormulario()">
        <label for="Nombre">Nombre:</label>
        <input type="text" id="Nombre" name="Nombre" />

        <label for="Edad">Edad:</label>
        <input type="number" id="Edad" name="Edad" />

        <button type="submit">Ingresar</button>
    </form>

    @if (mensaje == "error")
    {
        <div class="alert alert-error">Error: Por favor completa los campos correctamente.</div>
    }
    else if (mensaje == "ok")
    {
        <div class="alert alert-success">¡Usuario guardado correctamente!</div>
    }
</body>
</html>
