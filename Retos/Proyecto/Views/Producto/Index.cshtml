@model IEnumerable<Proyecto.Models.Producto>

<h2>Productos</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Precio</td>
                <td>@producto.Cantidad</td>
                <td>
                    <a href="@Url.Action("Edit", "Producto", new { id = producto.Id })" class="btn btn-primary">Editar</a>
                    <a href="@Url.Action("Delete", "Producto", new { id = producto.Id })" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Producto")" class="btn btn-success">Nuevo Producto</a>
