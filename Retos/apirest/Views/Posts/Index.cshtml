@model IEnumerable<MiProyectoApi.Services.Post>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";  // Asegúrate de tener un layout o ajusta según tu proyecto
    ViewData["Title"] = "Posts from JSONPlaceholder";
}

<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Título</th>
            <th>Cuerpo</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.id</td>
                <td>@post.title</td>
                <td>@post.body</td>
            </tr>
        }
    </tbody>
</table>
