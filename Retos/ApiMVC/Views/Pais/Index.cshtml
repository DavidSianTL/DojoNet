<table class="table table-bordered">
    <thead>
        <tr>
            <th>Bandera</th>
            <th>Nombre</th>
            <th>Idiomas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pais in Model)
        {
            <tr>
                <td><img src="@pais.Flags.Png" width="50" /></td>
                <td>@pais.Name.Common</td>
                <td>
                    @if (pais.Languages != null)
                    {
                        <ul>
                            @foreach (var idioma in pais.Languages.Values)
                            {
                                <li>@idioma</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span>No disponible</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
