@model pruebaJs2.Models.Producto

<h2>Crear Producto</h2>

<form id="form-crear-producto" asp-action="crear" method="post">

    <div>
        <label asp-for="Nombre"></label>
		<input id="nombre" asp-for="Nombre" type="text" placeholder="nombre de procuto" />
    </div>
    <div>
        <label asp-for="Precio"></label>
		<input id="precio" asp-for="Precio" type="number" placeholder="precio de producto" />
    </div>
    <div>
        <label asp-for="Categoria"></label>
		<input id="categoria" asp-for="Categoria" type="text" placeholder="Categoría de producto" />
    </div>
    <button type="submit">Guardar</button>

</form>
@section Scripts{
    <script src="<~/js/FormularioCrear.js"></script>
}