@model List<Reto.Models.Producto>


@{
	ViewData["title"] = "Productos";
}

@if (Model == null || Model.Count == 0){

	<p>No hay productos disponibles</p>
}
else
{
<h2>Productos disponibles:</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Opcion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in Model)
            {
                <tr>
                    <td>@producto.Id</td>
                    <td>@producto.Nombre</td>
                    <td>@producto.Precio</td>
                   <td>
                        <a asp-action="Eliminar" asp-controller="Producto" asp-route-id="@producto.Id" class="btn btn-sm btn-success">Editar</a>
                        <a asp-action="" asp-route-id="@producto.Id" class="btn btn-sm btn-danger">Eliminar</a>
                   </td>
                </tr>
            }
        </tbody>
    </table>
            <a asp-action="Crear" asp-controller="Producto" class="btn btn-primary" method="get">Agregar</a>
}