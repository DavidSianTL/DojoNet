@model List<Producto>

	@{
	ViewData["title"] = "Productos";
}

<h2>Productos disponibles</h2>

<table class="table table-bordered table-striped">
	<thead>
		<tr>
			<th>Nombre:</th>
			<th>Precio:</th>
			<th>Acciones:</th>
		</tr>
	</thead>	
	
	@foreach (var product in Model)
	{
		<tr>
			<td>@product.productName</td>
			<td>@product.price</td>
			<td>
				<a asp-action="EditProd" asp-route-id="@product.Id" class="btn-sm btn btn-warning">Editar</a>
				<a asp-action="DeleteProd" asp-route-id="@product.Id" class="bt-sm btn btn-danger">Eliminar</a>
			</td>
		</tr>	
	}
	
</table>
<br/>
<a asp-action="CreateProd" class="btn-sm btn btn-primary">Agregar</a>