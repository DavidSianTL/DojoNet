@model Producto
@{
	ViewData["title"] = "Editar producto";
}

<div id="titulo">
	<h2>Editar producto</h2>
</div>

<br />
<form asp-action="EditProd" method="post">
	<label><strong>Nombre del producto</strong></label>
	<input type="text" class="form-control"  asp-for="productName" required/>

	<br/>
	<label><strong>Precio del producto:</strong></label>
	<input class="form-control" asp-for="price" required />

	<br />
	<button type="submit" class="btn btn-success">Guardar</button>
	<a class="btn btn-secondary" asp-action="ShowProd" >Cancelar</a>
</form>