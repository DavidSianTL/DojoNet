@model FakeProduct
<div id="titulo">

	<h1>Agregar producto</h1>
	
</div>

<br />
<br />
<form asp-action="CreateProduct" method="post">

	<label>Nombre</label>
	<input  type="text" class="form-control" asp-for="title" required/>

	<label>Precio</label>
	<input type="number" class="form-control" asp-for="price" required />

	<label>Descripcion</label>
	<input type="text" class="form-control" asp-for="description" required />

	<label>Categoría</label>
	<input type="text" class="form-control" asp-for="category" required />

	<br />
	<button type="submit" class="btn btn-success">Guardar</button>
	<a asp-action="ShowProduct" class="btn-sm btn btn-secondary">Cancelar</a>
</form>
