@{
    ViewData["Title"] = "Consultar Código ISO por Idioma";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <i class="fas fa-code"></i> @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="ConsultarCodigo" method="post">
                <div class="form-group">
                    <label for="nombreIdioma">Nombre del Idioma:</label>
                    <input type="text" id="nombreIdioma" name="nombreIdioma"
                           required class="form-control"
                           placeholder="Ej: Spanish, English, French" />
                </div>
                <button type="submit" class="btn btn-success mt-3">
                    <i class="fas fa-search"></i> Buscar Código ISO
                </button>
            </form>
        </div>
    </div>
</div>
