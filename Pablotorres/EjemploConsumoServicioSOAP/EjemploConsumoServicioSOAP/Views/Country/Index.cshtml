@{
    ViewBag.Title = "Buscar Bandera de País";
}

<h2>Buscar Bandera por Código ISO</h2>

}
<div class="col-md-4 mb-4">
    <div class="card h-100 shadow-sm">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-flag"></i> Consultar Bandera
        </div>
        <div class="card-body text-center d-flex flex-column">
            <p class="card-text">Obtenga la bandera de cualquier país</p>
            <div class="mt-auto">
                <a asp-action="Bandera" class="btn btn-danger mt-3 w-100">
                    <i class="fas fa-flag"></i> Buscar Bandera
                </a>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Consultar Bandera";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-flag"></i> @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="Bandera" method="get">
                <div class="form-group">
                    <label for="codigoPais">Código del País (2 letras):</label>
                    <input type="text" id="codigoPais" name="codigoPais"
                           required class="form-control"
                           maxlength="2" pattern="[A-Za-z]{2}"
                           placeholder="Ej: GT, US, MX" />
                </div>
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-search"></i> Buscar Bandera
                </button>
            </form>
        </div>
    </div>
</div>
@model string
@{
    ViewData["Title"] = "Bandera del País";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-flag"></i> @ViewData["Title"]
        </div>
        <div class="card-body text-center">
            @if (!string.IsNullOrEmpty(Model))
            {
                <img src="@Model" alt="Bandera del país" class="img-fluid border" style="max-height: 300px;">
                <div class="mt-3">
                    <a href="@Model" target="_blank" class="btn btn-outline-danger">
                        <i class="fas fa-external-link-alt"></i> Ver en tamaño completo
                    </a>
                </div>
            }
            else
            {
                <div class="alert alert-warning">No se encontró bandera disponible.</div>
            }
        </div>
        <div class="card-footer">
            <a asp-action="ConsultarBandera" class="btn btn-secondary">
                <i class="fas fa-redo"></i> Nueva Consulta
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-home"></i> Inicio
            </a>
        </div>
    </div>
</div>