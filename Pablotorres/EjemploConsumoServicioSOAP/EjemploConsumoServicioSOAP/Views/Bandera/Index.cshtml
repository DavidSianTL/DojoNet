@{
    ViewData["Title"] = "Consultar Bandera";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-flag"></i> @ViewData["Title"]
        </div>
        <div class="card-body">
            <form asp-action="Consultar" method="post">
                <div class="form-group">
                    <label for="codigoPais">Código del País (2 letras):</label>
                    <input type="text" id="codigoPais" name="codigoPais"
                           required class="form-control"
                           maxlength="2" pattern="[A-Za-z]{2}"
                           placeholder="Ej: GT, US, MX" />
                </div>
                <button type="submit" class="btn btn-danger mt-3">
                    <i class="fas fa-search"></i> Buscar Bandera
                </button>
            </form>
        </div>
    </div>
</div>