@model pruebas.Models.producto

@{
    ViewData["Title"] = "Editar Producto";
}
<h2>Editar Producto</h2>

<form method="post">
    
    <div class="mb-3">
        <label for="Nombre" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre" value="@Model.Nombre" required />
    </div>
    <div class="mb-3">
        <label for="Tipo" class="form-label">Tipo</label>
        <input type="text" class="form-control" id="Tipo" name="Tipo" value="@Model.Tipo" required />
    </div>
    <div class="mb-3">
        <label for="Consola" class="form-label">Consola</label>
        <input type="text" class="form-control" id="Consola" name="Consola" value="@Model.Consola" required />
    </div>
    <div class="mb-3">
        <label for="Precio" class="form-label">Precio</label>
        <input type="number" step="0.01" class="form-control" id="Precio" name="Precio" value="@Model.Precio" required />
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>