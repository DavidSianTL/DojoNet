@model PokeApiConsumer.Models.Pokemon

@{
    ViewBag.Title = "Detalles de " + Model.Name;
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-md-4">
        @if (Model.Sprites != null && !string.IsNullOrEmpty(Model.Sprites.Front_Default))
        {
            <img src="@Model.Sprites.Front_Default" alt="@Model.Name" class="img-fluid" />
        }
    </div>
    <div class="col-md-8">
        <dl class="dl-horizontal">
            <dt>ID</dt>
            <dd>@Model.Id</dd>

            <dt>Nombre</dt>
            <dd>@Model.Name</dd>

            <dt>Altura</dt>
            <dd>@(Model.Height / 10.0) m</dd>

            <dt>Peso</dt>
            <dd>@(Model.Weight / 10.0) kg</dd>

            <dt>Tipos</dt>
            <dd>
                @if (Model.Types != null)
                {
                    foreach (var type in Model.Types)
                    {
                        <span class="badge bg-primary">@type.Type.Name</span>
                    }
                }
            </dd>
        </dl>
    </div>
</div>

<p>
    @Html.ActionLink("Volver a la lista", "Index", null, new { @class = "btn btn-secondary" })
</p>