@model SistemaSeguridadMVC.Models.SistemaViewModel


<h2>Editar Sistema</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.IdSistema)
    @Html.LabelFor(m => m.NombreSistema)
    @Html.TextBoxFor(m => m.NombreSistema)
    <br />
    @Html.LabelFor(m => m.DescripcionSistema)
    @Html.TextBoxFor(m => m.DescripcionSistema)
    <br />
    <input type="submit" value="Guardar cambios" class="btn btn-success" />
}
