@model EjemploConsumirApiRest.Models.DummyJSONModels.ProductsViewModel

@{
    ViewData["Title"] = "Updated Product";
}

<div class="container mt-5">
    <h2 class="mb-4">Updated Producto</h2>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label for="Title" class="form-label">Título</label>
            <input asp-for="Title" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Description" class="form-label">Descripción</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        </div>

        <div class="mb-3">
            <label for="Price" class="form-label">Precio</label>
            <input asp-for="Price" type="number" step="0.01" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="Thumbnail" class="form-label">URL de la Imagen</label>
            <input asp-for="Thumbnail" class="form-control" />
        </div>

        <button type="submit" class="btn btn-success">Update</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    </form>
</div>
