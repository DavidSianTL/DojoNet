@model wbSistemaSeguridad2.Models.Sistema
<h2>Eliminar Sistema</h2>

<p>¿Estàs seguro que desea eliminar el Sistema <strong>@Model.nombre_sistema</strong>?</p>

@using (Html.BeginForm("Eliminar", "Sistema", FormMethod.Post))
{
    @Html.HiddenFor(m => m.id_sistema)
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    <a href="@Url.Action("Index","Sistema")" class="btn btn-secondary">Cancelar</a>
}