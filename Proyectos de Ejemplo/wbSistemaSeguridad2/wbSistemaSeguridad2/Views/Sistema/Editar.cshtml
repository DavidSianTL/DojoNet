@model wbSistemaSeguridad2.Models.Sistema


<h2>Editar Sistema</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.id_sistema)
    @Html.LabelFor(m => m.nombre_sistema)
    @Html.TextBoxFor(m => m.nombre_sistema)
    <br />
    @Html.LabelFor(m => m.descripcion)
    @Html.TextBoxFor(m => m.descripcion)
    <br />
    <input type="submit" value="Guardar cambios" class="btn btn-success" />
}
