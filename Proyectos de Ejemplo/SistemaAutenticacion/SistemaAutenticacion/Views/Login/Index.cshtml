@using SistemaAutenticacion.Dtos.UsuarioDtos

@model UsuarioLoginRequestDto;

@{
    ViewData["Title"] = "Login";
}


<div>
    <div class="login-title">Iniciar Sesión</div>
    <form asp-action="Login" asp-controller="Login" method="post">
        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="text" class="form-control" placeholder="Ingrese su email" required>
            <span asp-validation-for="Email" style="color:red;"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control"placeholder="Ingrese su contraseña" requi>
            <span asp-validation-for="Password" style="color:red;"></span>
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
    </form>
</div>
