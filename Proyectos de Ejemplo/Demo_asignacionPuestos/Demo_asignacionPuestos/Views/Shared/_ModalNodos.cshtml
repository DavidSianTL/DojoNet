<style>
    .org-modal {
        display: none;
        position: fixed;
        z-index: 1050;
        left: 0;
        top: 0;
        width: 100vw;
        height: 100vh;
        overflow: auto;
        background-color: rgba(0,0,0,0.5);
        transition: opacity 0.2s;
    }

    .org-modal-content {
        background-color: #fff;
        margin: 5% auto;
        border-radius: 8px;
        padding: 2rem 1.5rem 1.5rem 1.5rem;
        border: none;
        width: 90%;
        max-width: 500px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.25);
        position: relative;
        animation: modalFadeIn 0.3s;
    }


    .org-modal-close {
        color: #888;
        float: right;
        font-size: 2rem;
        font-weight: bold;
        cursor: pointer;
        transition: color 0.2s;
        position: absolute;
        top: 1rem;
        right: 1.2rem;
        line-height: 1;
    }

    .org-modal-close:hover,
    .org-modal-close:focus {
        color: #e74c3c;
        text-decoration: none;
        outline: none;
    }

    #orgModalBody {
        margin-top: 1.5rem;
    }
</style>

<div id="orgModal" class="org-modal">
    <div class="org-modal-content">
        <span id="orgModalClose" class="org-modal-close" title="Cerrar">&times;</span>
        <div id="orgModalBody"></div>
    </div>
</div>
