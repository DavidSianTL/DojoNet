@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <script src="~/js/scripts.js" defer></script>
</head>
<body>
    <header>
        <h1>Formulario de Registro</h1>
    </header>

    <main>
        <form id="registrationForm" method="post" onsubmit="return validateForm()">
            <label for="nombres">Nombres:</label>
            <input type="text" id="nombres" name="nombres" required>

            <label for="apellidos">Apellidos:</label>
            <input type="text" id="apellidos" name="apellidos" required>

            <label for="correo">Correo Electrónico:</label>
            <input type="email" id="correo" name="correo" required>

            <label for="fechaNacimiento">Fecha de Nacimiento:</label>
            <input type="date" id="fechaNacimiento" name="fechaNacimiento" required>

            <label for="paisNacimiento">País de Nacimiento:</label>
            <select id="paisNacimiento" name="paisNacimiento" required>
                <option value="">Seleccione un país</option>
                <option value="Argentina">Argentina</option>
                <option value="Brasil">Brasil</option>
                <option value="Chile">Chile</option>
                <option value="Colombia">Colombia</option>
                <option value="México">México</option>
                <option value="Perú">Perú</option>
                <option value="Venezuela">Venezuela</option>
                <!-- Puedes agregar más países si lo deseas -->
            </select>

            <label for="direccion">Dirección de Domicilio:</label>
            <input type="text" id="direccion" name="direccion" required>

            <button type="submit">Enviar</button>
        </form>
    </main>

    <footer>
        <p>&copy; 2025 Mi Aplicación Web</p>
    </footer>
</body>
</html>