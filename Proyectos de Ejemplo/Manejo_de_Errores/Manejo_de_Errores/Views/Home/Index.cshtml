@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center">Dashboard</h1>
            <div class="alert alert-info" role="alert">
                Este es el panel de control donde podrás ver tus estadísticas y gestionar tu cuenta.
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title">Estadísticas</h5>
                            <p class="card-text">Aquí puedes ver las estadísticas de tu actividad.</p>
                            
                            <!-- Enlace como botón que lleva al controlador Estadisticas, acción Index -->
                            <a asp-controller="Estadisticas" asp-action="Index" class="btn btn-light">
                                Estadísticas
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Tareas</h5>
                            <p class="card-text">Gestiona las tareas asignadas a tu cuenta.</p>

                            <!-- Enlace como botón que lleva al controlador Tareas, acción Index -->
                            <a asp-controller="Tareas" asp-action="Index" class="btn btn-light">
                                Tareas
                            </a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <div class="card text-white bg-warning">
                        <div class="card-body">
                            <h5 class="card-title">Configuración</h5>
                            <p class="card-text">Administra tu perfil y configuraciones.</p>

                            <!-- Enlace como botón que lleva al controlador Configuracion, acción Index -->
                            <a asp-controller="Configuracion" asp-action="Index" class="btn btn-light">
                                Configurar
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>