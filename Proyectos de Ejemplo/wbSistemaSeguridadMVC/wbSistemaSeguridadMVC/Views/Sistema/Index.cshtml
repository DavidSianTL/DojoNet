@model List<wbSistemaSeguridadMVC.Models.Sistema>
@{
    ViewBag.Title = "Sistemas";
}

<h2>Lista de Sistemas</h2>
<a href="@Url.Action("Crear", "Sistema")" class="btn btn-primary mb-2">Nuevo Sistema</a>
@if (Model.Count == 0)
{
    <p>No se encontraron sistemas.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>IdSistema</th>
                <th>NombreSistema</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sistema in Model)
            {
                <tr>
                    <td>@sistema.IdSistema</td>
                    <td>@sistema.NombreSistema</td>
                    <td>@sistema.Descripcion</td>
                    <td>
                        <a href="@Url.Action("Editar", "Sistema", new { id = sistema.IdSistema })" class="btn btn-sm btn-warning">Editar</a>
                        <a href="@Url.Action("Eliminar", "Sistema", new { id = sistema.IdSistema })" class="btn btn-sm btn-danger">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}