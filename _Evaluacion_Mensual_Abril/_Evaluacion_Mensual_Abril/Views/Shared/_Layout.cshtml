<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - _Evaluacion_Mensual_Abril</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Error404.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_Evaluacion_Mensual_Abril.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        body {
            background: linear-gradient(-45deg, #ee7752, #e73c7e, #23a6d5, #23d5ab);
            background-size: 400% 400%;
            animation: gradient 15s ease infinite;
            min-height: 100vh;
        }

        @@keyframes gradient {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        .navbar {
            background-color: #001f3f;
        }

        .navbar-nav .nav-link {
            color: #ffffff !important;
            font-weight: 600;
            padding: 0.75rem 1.25rem;
            transition: background-color 0.3s, color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #e73c7e;
                color: #ffffff !important;
                border-radius: 5px;
            }

        .navbar-toggler-icon {
            background-color: #ffffff;
        }

        .container,
        header,
        footer {
            z-index: 2;
            position: relative;
        }

        .alert {
            width: 80%;
            max-width: 600px;
            margin: 0 auto;
            border-radius: 10px;
            font-size: 1.2em;
            padding: 15px;
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
            text-align: center;
            margin-top: 30px;
        }

            .alert i {
                margin-right: 10px;
                font-size: 1.5em;
            }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-light" asp-controller="Home" asp-action="Index">_Evaluacion_Mensual_Abril</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Bienvenida</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Productos" asp-action="Index">Local</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ProductoApi" asp-action="Index">Online</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Country" asp-action="Index">Países</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Logs">Ver Logs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Privacy">EXTRA :D</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">

            @* Mostrar mensaje de error si existe *@
            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger text-center fw-bold mt-3">
                    <i class="bi bi-exclamation-triangle-fill"></i> @ViewData["ErrorMessage"]
                </div>
            }

            @RenderBody()
        </main>
    </div>

   
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

  
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
