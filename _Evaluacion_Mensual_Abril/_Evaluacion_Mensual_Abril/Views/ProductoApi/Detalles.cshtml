@model _Evaluacion_Mensual_Abril.Models.ProductoApi

<div class="container my-5">
    <div class="card shadow-lg border-0">
        <div class="row g-0">
            <div class="col-md-6 d-flex align-items-center justify-content-center p-4">
                <img src="@Model.image" class="img-fluid rounded" alt="@Model.title" style="max-height: 400px; object-fit: contain;" />
            </div>
            <div class="col-md-6 p-4">
                <h2 class="card-title mb-3">@Model.title</h2>
                <p class="card-text text-muted">@Model.description</p>

                <p class="mb-2"><strong>Precio:</strong> <span class="text-success fw-bold">$@Model.price</span></p>
                <p class="mb-2"><strong>Categoría:</strong> @Model.category</p>
                <p class="mb-2">
                    <strong>Calificación:</strong>
                    <span class="text-warning">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Round(Model.rating.rate))
                            {
                                <i class="bi bi-star-fill"></i> 
                            }
                            else
                            {
                                <i class="bi bi-star"></i> 
                            }
                        }
                    </span>
                    <small class="text-muted">(@Model.rating.count valoraciones)</small>
                </p>

                <a href="@Url.Action("Index", "ProductoApi")" class="btn btn-outline-primary mt-4">
                    ← Volver al Catálogo
                </a>
            </div>
        </div>
    </div>
</div>


