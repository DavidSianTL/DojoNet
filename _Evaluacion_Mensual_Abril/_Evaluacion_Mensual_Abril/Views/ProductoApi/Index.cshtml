@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@model List<_Evaluacion_Mensual_Abril.Models.ProductoApi>

<h2 class="my-4 text-center"> Catálogo de Productos GEKO </h2>

<form id="searchForm" method="get" class="mb-4 w-75 mx-auto">
    <div class="input-group shadow-sm">
        <input type="text" id="search" name="search" class="form-control" placeholder="Buscar productos..."
               value="@HttpContextAccessor.HttpContext.Request.Query["search"]" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<div class="row justify-content-center" id="productList">
    @foreach (var producto in Model)
    {
        <div class="col-md-3 col-sm-6 mb-4 d-flex align-items-stretch">
            <div class="card h-100 shadow-sm border-0 position-relative">
                <img src="@producto.image" class="card-img-top" alt="@producto.title" style="height: 250px; object-fit: contain;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@producto.title</h5>
                    <p class="card-text text-muted" style="font-size: 0.9em;">
                        @producto.description.Substring(0, Math.Min(100, producto.description.Length))...
                    </p>
                    <div class="mt-auto">
                        <p class="fw-bold">💲@producto.price</p>
                    </div>
                </div>
                <a href="@Url.Action("Detalles", "ProductoApi", new { id = producto.id })" class="stretched-link"></a>
            </div>
        </div>

    }
</div>

@if (ViewData["TotalPages"] != null)
{
    <nav class="d-flex justify-content-center mt-4" id="pagination">
        <ul class="pagination">
            @{
                var totalPages = (int)ViewData["TotalPages"];
                var currentPage = (int)ViewData["CurrentPage"];
                for (int i = 1; i <= totalPages; i++)
                {
                    var isActive = (i == currentPage) ? "active" : "";
                    <li class="page-item @isActive">
                        <a class="page-link" href="?page=@i&search=@HttpContextAccessor.HttpContext.Request.Query["search"]">@i</a>
                    </li>
                }
            }
        </ul>
    </nav>

}




