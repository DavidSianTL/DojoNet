@{
    ViewData["Title"] = "Ver Logs";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .log-entry {
            padding: 10px;
            border: 1px solid #ddd;
            margin-bottom: 5px;
            background-color: #fff;
            box-shadow: 0 0 5px rgba(0, 0, 0, 0.1);
        }

        .log-entry span {
            display: block;
            font-size: 0.9em;
            color: #888;
        }

        .log-entry .log-message {
            font-size: 1.1em;
            color: #333;
        }

        .log-entry.error {
            border-left: 5px solid red;
        }

        .log-entry.success {
            border-left: 5px solid green;
        }

        .log-entry.info {
            border-left: 5px solid blue;
        }

        .log-header {
            background-color: #007bff;
            color: white;
            padding: 10px;
            margin-bottom: 20px;
            text-align: center;
            font-size: 1.5em;
        }

        .error-message {
            color: red;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="log-header">
            <h2>Registro de Actividades y Errores</h2>
        </div>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="error-message">
                <strong>@ViewData["ErrorMessage"]</strong>
            </div>
        }

        @if (Model != null && Model.Any())
        {
            foreach (var log in Model)
            {
                var logClass = log.Contains("Error") ? "error" : log.Contains("Acción") ? "success" : "info";
                <div class="log-entry @logClass">
                    <span>@log.Substring(0, 19)</span> 
                    <div class="log-message">@log.Substring(20)</div> 
                </div>
            }
        }
        else
        {
            <div class="error-message">
                <strong>No se encontraron registros de actividad.</strong>
            </div>
        }
    </div>
</body>
</html>
