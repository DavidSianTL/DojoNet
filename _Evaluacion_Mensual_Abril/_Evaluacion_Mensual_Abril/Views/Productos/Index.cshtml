@model List<Evaluacion_Mensual_Abril.Models.ProductoViewModel>

<h2 class="text-center my-4">Lista de Productos GEKO</h2>

<div class="d-flex justify-content-center mb-3">
    <a class="btn btn-primary" asp-action="Crear">Agregar Producto</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover align-middle text-center">
        <thead class="table-dark">
            <tr>
                <th>Título</th>
                <th>Precio</th>
                <th>Categoría</th>
                <th>Descripción</th>
                <th>Imagen</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody class="bg-white">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Titulo</td>
                    <td>@item.Precio.ToString("C")</td>
                    <td>@item.Categoria</td>
                    <td>@item.Descripcion</td>
                    <td>
                        <img src="@item.Imagen" alt="Imagen de @item.Titulo" class="img-thumbnail" style="width: 60px;" />
                    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a class="btn btn-info btn-sm" asp-action="Detalles" asp-route-id="@item.Id">Ver</a>
                            <a class="btn btn-warning btn-sm" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Eliminar" asp-route-id="@item.Id">Eliminar</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


