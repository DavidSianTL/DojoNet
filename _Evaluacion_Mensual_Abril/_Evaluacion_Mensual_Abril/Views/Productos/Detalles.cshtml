@model Evaluacion_Mensual_Abril.Models.ProductoViewModel

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h2 class="text-center my-4">Detalles del Producto</h2>

<div class="container border p-4 bg-light rounded">
    <h4>@Model.Titulo</h4>

    <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
    <p><strong>Categoría:</strong> @Model.Categoria</p>
    <p><strong>Descripción:</strong> @Model.Descripcion</p>
    <img src="@Model.Imagen" class="img-fluid rounded mt-3" style="max-width: 200px;" />

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary">Volver a la lista</a>
    </div>
</div>
