@{
    ViewData["Title"] = "Formulario de Pedido";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form method="post" id="pedidoForm">
    <!-- Productos -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 1</label>
            <input type="text" class="form-control" id="Producto1" name="Producto1" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 2</label>
            <input type="text" class="form-control" id="Producto2" name="Producto2" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 3</label>
            <input type="text" class="form-control" id="Producto3" name="Producto3" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 4</label>
            <input type="text" class="form-control" id="Producto4" name="Producto4" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 5</label>
            <input type="text" class="form-control" id="Producto5" name="Producto5" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 6</label>
            <input type="text" class="form-control" id="Producto6" name="Producto6" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 7</label>
            <input type="text" class="form-control" id="Producto7" name="Producto7" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 8</label>
            <input type="text" class="form-control" id="Producto8" name="Producto8" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 9</label>
            <input type="text" class="form-control" id="Producto9" name="Producto9" placeholder="Nombre del producto" />
        </div>
        <div class="col-md-6 mb-3">
            <label class="form-label">Producto 10</label>
            <input type="text" class="form-control" id="Producto10" name="Producto10" placeholder="Nombre del producto" />
        </div>
    </div>

    <hr />

    <!-- Tipo de Envío -->
    <div class="mb-3">
        <label class="form-label">Tipo de Envío</label>
        <select class="form-select" id="Envio" name="Envio">
            <option value="">-- Selecciona una opción --</option>
            <option value="Forza">Forza</option>
            <option value="Cargo">Cargo</option>
            <option value="Guatex">Guatex</option>
        </select>
    </div>

    <!-- Dirección -->
    <div class="mb-3">
        <label class="form-label">Dirección</label>
        <textarea class="form-control" id="Direccion" name="Direccion" rows="3" placeholder="Dirección completa..."></textarea>
    </div>

    <!-- Nombre y Apellido -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <label class="form-label">Nombre</label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" />
        </div>

        <div class="col-md-6 mb-3">
            <label class="form-label">Apellido</label>
            <input type="text" class="form-control" id="Apellido" name="Apellido" />
        </div>
    </div>

    <!-- Teléfono -->
    <div class="mb-3">
        <label class="form-label">Teléfono</label>
        <input type="text" class="form-control" id="Telefono" name="Telefono" placeholder="Ej: 12345678" />
    </div>

    <!-- Correo Electrónico -->
    <div class="mb-3">
        <label class="form-label">Correo electrónico</label>
        <input type="email" class="form-control" id="Email" name="Email" />
    </div>

    <!-- Contraseña -->
    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="Password" name="Password" />
    </div>

    <button type="submit" class="btn btn-primary">Enviar Pedido</button>
</form>


<script>
document.querySelector('form').addEventListener('submit', function (e) {
    let isValid = true;
    const letrasRegex = /^[a-zA-Z\s]+$/;
    const telefonoRegex = /^\d{8}$/;
    const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;

    // Validar Producto 1
    const producto1 = document.querySelector('#Producto1');
    if (producto1.value.trim() === '') {
		   alerta('Falta Producto 1','El campo Producto 1 es obligatorio.');
        producto1.focus();
        e.preventDefault();
        return;
    } else if (!letrasRegex.test(producto1.value.trim())) {
           alerta('Campo invalido','Ingrese solo letras');
        producto1.focus();
        e.preventDefault();
        return;
    }

    // Validar productos 2-10 (si tienen algo escrito)
    for (let i = 2; i <= 10; i++) {
        const producto = document.querySelector(`#Producto${i}`);
        if (producto && producto.value.trim() !== '' && !letrasRegex.test(producto.value.trim())) {
                        alerta(`Producto ${i} inválido`,'Debe contener solo letras.');
            producto.focus();
            e.preventDefault();
            return;
        }
    }

    // Validar Tipo de Envío
    const envio = document.querySelector('#Envio');
   if (envio.value.trim() === ''){
        alerta('Campo obligatorio','Seleccione un metodo de envio.');
        envio.focus();
        e.preventDefault();
        return;
    }

    // Validar Dirección
    const direccion = document.querySelector('#Direccion');
    if (direccion.value.trim().length < 20) {
           alerta('Error','La direccion debe de tener al menos 20 caracteres')
        direccion.focus();
        e.preventDefault();
        return;
    }

    // Validar Nombre
    const nombre = document.querySelector('#Nombre');
    if (nombre.value.trim() === '') {
            alerta('Campo obligatorio','Ingrese el nombre');
        nombre.focus();
        e.preventDefault();
        return;
    } else if (!letrasRegex.test(nombre.value.trim())) {
              alerta('Error nombre','Ingrese un nombre valido');
        nombre.focus();
        e.preventDefault();
        return;
    }

    // Validar Teléfono
    const telefono = document.querySelector('#Telefono');
    if (telefono === ""){
                alerta('Campo obligatorio','Ingrese el telefono');
    }
   else if (!telefonoRegex.test(telefono.value.trim())) {
               alerta('Error','Ingrese 8 digitos');
        telefono.focus();
        e.preventDefault();
        return;
    }

    // Validar Correo
    const email = document.querySelector('#Email');
    if (!emailRegex.test(email.value.trim())) {
                alerta('Correo invalido','Ingrese un correo valido');
        email.focus();
        e.preventDefault();
        return;
    }

    // Validar Contraseña
    const password = document.querySelector('#Password');
    if (password.value.trim().length < 6) {
               alerta('Contraseña muy corta','Debe de tener al menos 6 caracteres');
        password.focus();
        e.preventDefault();
        return;
    }
});
</script>